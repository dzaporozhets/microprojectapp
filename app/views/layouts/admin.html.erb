<!DOCTYPE html>
<html class="<%= dark_mode_class %>">
  <head>
    <%= render 'layouts/head' %>
  </head>

  <body class="dark:bg-gray-950">
    <nav class="bg-gray-200 dark:bg-gray-800 text-gray-700 dark:text-gray-300 border-b border-gray-300 dark:border-gray-800">
      <div class="flex flex-wrap justify-between items-center mx-auto max-w-screen-xl px-4">
        <ol role="list" class="flex space-x-4">
          <li class="flex">
            <%= render 'layouts/nav/home_link' %>
          </li>
          <li class="flex">
            <%= render 'layouts/nav/separator' %>

            <div class="flex items-center justify-between gap-x-6 ml-4">
              <div class="min-w-0">
                <%= link_to admin_path do %>
                  <div class="flex items-start gap-x-3">
                    <div class="font-semibold leading-6 text-gray-900 dark:text-gray-200 text-base">
                      <span>Admin area</span>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </li>
        </ol>
        <div class="flex items-center space-x-6 rtl:space-x-reverse hidden md:flex">
          <%= render 'layouts/nav/user' %>
        </div>
      </div>
    </nav>

    <main class="container mx-auto max-w-screen-xl p-4 flex">
      <div class="mx-auto w-full">
        <%= yield %>
      </div>
    </main>
  </body>
</html>
