<!DOCTYPE html>
<html class="<%= dark_mode_class %>">
  <head>
    <%= render 'layouts/head' %>
  </head>

  <body class='body-color'>
    <%= render 'layouts/header_compact' %>

    <nav class="nav-container">
      <div class="flex flex-wrap nav-title">
        <%= link_to admin_path do %>
          <div class="flex items-start gap-x-3">
            <div class="font-semibold leading-8 text-lg line-clamp-1 text-black dark:text-white">
              <span>Admin area</span>
            </div>
          </div>
        <% end %>
      </div>

      <div class="flex flex-wrap nav-controls">
        <%= admin_tabs @tab_name %>
      </div>
    </nav>

    <main class="main-container">
      <div class="content w-full">
        <%= yield %>
      </div>
    </main>
  </body>
</html>
