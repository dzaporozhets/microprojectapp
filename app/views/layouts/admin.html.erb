<!DOCTYPE html>
<html class="<%= dark_mode_class %>">
  <head>
    <%= render 'layouts/head' %>
  </head>

  <body class='body-color'>
    <%= render 'layouts/header_compact' %>

    <nav class="bg-base">
      <div class="flex flex-wrap justify-between items-center mx-auto max-w-screen-md px-4 py-4 pb-1">
        <%= link_to admin_path do %>
          <div class="flex items-start gap-x-3">
            <div class="font-semibold leading-8 text-lg line-clamp-1 text-black dark:text-white">
              <span>Admin area</span>
            </div>
          </div>
        <% end %>
      </div>
    </nav>

    <div class="title-subnav">
      <div class="flex flex-wrap justify-between items-center mx-auto max-w-screen-md px-4">
        <%= admin_tabs @tab_name %>
      </div>
    </div>

    <main class="main-container">
      <div class="mx-auto w-full">
        <%= yield %>
      </div>
    </main>
  </body>
</html>
