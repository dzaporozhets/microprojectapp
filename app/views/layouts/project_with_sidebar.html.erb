<!DOCTYPE html>
<html class="<%= dark_mode_class %>">
  <head>
    <%= render 'layouts/head' %>
  </head>

  <body class="dark:bg-gray-950">
    <%= render 'layouts/project_nav' %>

    <main class="container mx-auto max-w-screen-xl p-4 flex">
      <div class="w-full">
        <div class="mx-auto">
          <div class="flex flex-col md:flex-row md:space-x-12">
            <div class="mb-4 md:mb-0 md:w-2/3">
              <%= yield %>
            </div>
            <div class="mb-4 md:mb-0 md:w-1/3">
              <%= render 'projects/team' unless @project.personal? %>
              <%= render 'projects/files' %>
              <%= render 'projects/links' %>
              <%= render 'projects/extra' if !@project.personal? && @project.user == current_user %>
            </div>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
