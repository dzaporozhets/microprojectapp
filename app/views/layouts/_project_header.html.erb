          <div class="flex items-center text-gray-400">
            <%#= link_to 'Project:', root_path, class: "flex items-center font-base mr-4" %>

            <%= link_to @project do %>
              <div class="font-medium leading-8 text-base line-clamp-1 text-black dark:text-white">
