            <% elsif current_user.pinned_projects.include?(@project) %>
              <%= button_to project_pins_path(@project), method: :delete, class: "btn-sm flex", title: "Unmark Favorite", data: { turbo_method: :delete, confirm: "Are you sure you want to unarchive this project?" } do %>
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-5">
