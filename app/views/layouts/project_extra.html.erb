<!DOCTYPE html>
<html class="<%= dark_mode_class %>">
  <head>
    <%= render 'layouts/head' %>
  </head>

  <body class='<%= body_color %>'>
    <%= render 'layouts/project_header' %>
    <%= render 'layouts/project_subnav' %>

    <main class="container mx-auto max-w-screen-xl p-4 flex">
      <div class="w-full">
        <div class="mx-auto">
          <div class="flex flex-col md:flex-row md:space-x-8 lg:space-x-12">
            <!-- Sidebar navigation -->
            <div class="md:w-64 lg:w-72 md:flex-none mb-6 md:mb-0 md:sticky md:top-4 md:self-start">
              <div class="md:overflow-hidden">
                <%= render 'projects/nav' %>
              </div>
            </div>

            <!-- Main content area -->
            <div class="md:flex-1">
              <%= yield %>
            </div>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
