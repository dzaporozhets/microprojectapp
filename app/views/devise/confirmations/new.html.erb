<div class="sm:mx-auto sm:w-full sm:max-w-sm">
  <div class="resource-container">
    <div class="resource-header">
      <h2 class="text-3xl font-extrabold dark:text-gray-200">Resend confirmation instructions</h2>
    </div>
    <div class="resource-body">
      <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: 'space-y-6' }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mt-2">
          <%= f.label :email, class:"dark:text-gray-200" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: 'block w-full base-input' %>
        </div>

        <div class="actions mt-2">
          <%= f.submit "Resend confirmation instructions", class: 'btn-primary w-full' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
