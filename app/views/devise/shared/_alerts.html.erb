<% if defined?(notice) && notice.present? %>
  <p class="my-5 p-4 mb-4 text-sm text-violet-800 dark:text-violet-200 border border-violet-800 dark:border-violet-200 rounded-lg bg-violet-50 dark:bg-violet-900"><%= notice %></p>
<% end %>

<% if defined?(alert) && alert.present? %>
  <p class="my-5 p-4 text-sm text-gray-800 dark:text-gray-200 border border-gray-800 dark:border-gray-200 rounded-lg bg-gray-50 dark:bg-gray-900"><%= alert %></p>
<% end %>
