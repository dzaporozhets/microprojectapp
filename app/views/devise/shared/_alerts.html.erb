<% if defined?(notice) && notice.present? %>
  <p class="my-5 p-4 mb-4 text-sm text-blue-800 dark:text-blue-200 border-blue-800 dark:border-blue-200 rounded-lg bg-blue-50 dark:bg-blue-900"><%= notice %></p>
<% end %>

<% if defined?(alert) && alert.present? %>
  <p class="my-5 p-4 text-sm text-gray-800 dark:text-gray-200 border-gray-800 dark:border-gray-200 rounded-lg bg-gray-50 dark:bg-gray-900"><%= alert %></p>
<% end %>
