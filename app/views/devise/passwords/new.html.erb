<div class="sm:mx-auto sm:w-full sm:max-w-sm">
  <div class="resource-container">
    <div class="resource-header">
      <h2 class="text-3xl font-extrabold dark:text-gray-200">Forgot your password?</h2>
    </div>
    <div class="resource-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'space-y-6' }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mt-2">
          <%= f.label :email, class:"dark:text-gray-200" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'block w-full base-input' %>
        </div>

        <div class="mt-2">
          <%= f.submit "Reset password", class: "flex w-full justify-center btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
