<div class="mt-10">
  <% if ENV['GOOGLE_CLIENT_ID'].present? %>
    <div class="mb-4">
      <%= button_to user_google_oauth2_omniauth_authorize_path, data: { turbo: false }, method: :post, class: "btn-base btn-google flex w-full justify-center" do %>
        <svg class="h-6 w-6" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M12.0003 4.75C13.7703 4.75 15.3553 5.36002 16.6053 6.54998L20.0303 3.125C17.9502 1.19 15.2353 0 12.0003 0C7.31028 0 3.25527 2.69 1.28027 6.60998L5.27028 9.70498C6.21525 6.86002 8.87028 4.75 12.0003 4.75Z" fill="#EA4335" />
          <path d="M23.49 12.275C23.49 11.49 23.415 10.73 23.3 10H12V14.51H18.47C18.18 15.99 17.34 17.25 16.08 18.1L19.945 21.1C22.2 19.01 23.49 15.92 23.49 12.275Z" fill="#4285F4" />
          <path d="M5.26498 14.2949C5.02498 13.5699 4.88501 12.7999 4.88501 11.9999C4.88501 11.1999 5.01998 10.4299 5.26498 9.7049L1.275 6.60986C0.46 8.22986 0 10.0599 0 11.9999C0 13.9399 0.46 15.7699 1.28 17.3899L5.26498 14.2949Z" fill="#FBBC05" />
          <path d="M12.0004 24.0001C15.2404 24.0001 17.9654 22.935 19.9454 21.095L16.0804 18.095C15.0054 18.82 13.6204 19.245 12.0004 19.245C8.8704 19.245 6.21537 17.135 5.2654 14.29L1.27539 17.385C3.25539 21.31 7.3104 24.0001 12.0004 24.0001Z" fill="#34A853" />
        </svg>
        <span class="text-sm leading-6 pl-2 dark:text-gray-200">Sign in with Google</span>
      <% end %>
    </div>
  <% end %>

  <% if ENV['MICROSOFT_CLIENT_ID'].present? %>
    <div class="mb-4">
      <%= button_to user_entra_id_omniauth_authorize_path, data: { turbo: false }, method: :post, class: "btn-base btn-google flex w-full justify-center" do %>
        <svg class="h-6 w-6" viewBox="0 0 48 48" aria-hidden="true">
          <g fill="none">
          <path fill="#F25022" d="M22 22H4V4h18v18z"/>
          <path fill="#7FBA00" d="M22 44H4V26h18v18z"/>
          <path fill="#00A4EF" d="M44 22H26V4h18v18z"/>
          <path fill="#FFB900" d="M44 44H26V26h18v18z"/>
          </g>
        </svg>
        <span class="text-sm leading-6 pl-2 dark:text-gray-200">Sign in with Microsoft</span>
      <% end %>
    </div>
  <% end %>
</div>

<% unless Rails.application.config.app_settings[:disable_email_login] %>
  <div class="relative mt-10">
    <div class="absolute inset-0 flex items-center" aria-hidden="true">
      <div class="w-full border-t border-base"></div>
    </div>
    <div class="relative flex justify-center text-sm font-medium leading-6">
      <span class="px-6 text-gray-900 dark:text-gray-200">Or continue with email</span>
    </div>
  </div>
<% end %>
