<h2 class="text-4xl font-extrabold dark:text-gray-100">Log in</h2>
<% if ENV['APP_DOMAIN'].present? %>
  <p class="text-gray-500"><%= ENV['APP_DOMAIN'] %></p>
<% end %>


<div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
  <%= render 'devise/shared/alerts' %>

  <%- if devise_mapping.omniauthable? && ENV['GOOGLE_CLIENT_ID']%>
    <%= button_to user_google_oauth2_omniauth_authorize_path, data: { turbo: false }, method: :post, class: "btn-gray btn-google flex w-full justify-center" do %>
      <svg class="h-6 w-6" viewBox="0 0 24 24" aria-hidden="true">
        <path d="M12.0003 4.75C13.7703 4.75 15.3553 5.36002 16.6053 6.54998L20.0303 3.125C17.9502 1.19 15.2353 0 12.0003 0C7.31028 0 3.25527 2.69 1.28027 6.60998L5.27028 9.70498C6.21525 6.86002 8.87028 4.75 12.0003 4.75Z" fill="#EA4335" />
        <path d="M23.49 12.275C23.49 11.49 23.415 10.73 23.3 10H12V14.51H18.47C18.18 15.99 17.34 17.25 16.08 18.1L19.945 21.1C22.2 19.01 23.49 15.92 23.49 12.275Z" fill="#4285F4" />
        <path d="M5.26498 14.2949C5.02498 13.5699 4.88501 12.7999 4.88501 11.9999C4.88501 11.1999 5.01998 10.4299 5.26498 9.7049L1.275 6.60986C0.46 8.22986 0 10.0599 0 11.9999C0 13.9399 0.46 15.7699 1.28 17.3899L5.26498 14.2949Z" fill="#FBBC05" />
        <path d="M12.0004 24.0001C15.2404 24.0001 17.9654 22.935 19.9454 21.095L16.0804 18.095C15.0054 18.82 13.6204 19.245 12.0004 19.245C8.8704 19.245 6.21537 17.135 5.2654 14.29L1.27539 17.385C3.25539 21.31 7.3104 24.0001 12.0004 24.0001Z" fill="#34A853" />
      </svg>
      <span class="text-sm leading-6 pl-2 dark:text-gray-100">Sign in with Google</span>
    <% end %>
    <div>
      <div class="relative mt-10">
        <div class="absolute inset-0 flex items-center" aria-hidden="true">
          <div class="w-full border-t border-gray-200 dark:border-gray-800"></div>
        </div>
        <div class="relative flex justify-center text-sm font-medium leading-6">
          <span class="bg-white px-6 text-gray-900 dark:text-gray-100">Or continue with email</span>
        </div>
      </div>
    </div>
  <% end %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
    <div class="mt-2">
      <%= f.label :email, class:"dark:text-gray-100" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-m sm:leading-6' %>
    </div>

    <div class="mt-2">
      <%= f.label :password, class:"dark:text-gray-100" %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-m sm:leading-6' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mt-2">
        <%= f.check_box :remember_me, class: 'checkbox mr-1' %>
        <%= f.label :remember_me, class:"dark:text-gray-100" %>
      </div>
    <% end %>

    <div class="mt-2">
      <%= f.submit "Log in", class: "flex w-full justify-center rounded-md bg-indigo-600 px-3 py-3 text-m font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
