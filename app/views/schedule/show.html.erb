<div class="w-full">
  <% content_for :title, "Schedule" %>

  <% content_for :subnav do %>
    <nav class="nav-container">
      <div class="flex flex-wrap nav-tabs">
        <%= home_tabs "Tasks" %>

        <div class="hidden w-auto sm:flex sm:flex-row items-center space-x-6">
          <div class="w-auto ml-auto">
            <%= content_tag :div, class: ui_toggle do %>
              <%= link_to "List", tasks_path, class: "#{current_page?(tasks_path) ? ui_toggle_active_tab : ui_toggle_tab}" %>
              <%= link_to "Schedule", schedule_path, class: "#{current_page?(schedule_path) ? ui_toggle_active_tab : ui_toggle_tab}" %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>
  <% end %>

  <div class="space-y-6">
    <%= render 'shared/divider', text: 'Tasks with due date' %>

    <div>
      <% if @tasks.any? %>
        <ol class="text-sm leading-6 text-gray-500 grid grid-cols-1 tasks-list">
          <% @tasks.each do |task| %>
            <%= render 'schedule/task', task: task %>
          <% end %>
        </ol>
      <% else %>
        <div class="resource-empty-state">
          <div class="flex items-center justify-center h-12 w-12 rounded-md bg-gray-100 dark:bg-gray-800 mx-auto">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-600 dark:text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
          </div>
          <h3 class="resource-empty-title">No upcoming tasks</h3>
          <p class="resource-empty-description">Create a task and set due date for it to appear here.</p>
        </div>
      <% end %>
    </div>

    <% if @tasks.any? && @tasks.total_pages > 1 %>
      <div class="flex items-center justify-center">
        <%= paginate @tasks %>
      </div>
    <% end %>

    <div>
      <% if current_user.calendar_token.present? %>
        <%= render 'calendar_export' %>
      <% else %>
        <div class="bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-700 text-yellow-800 dark:text-yellow-200 rounded-md p-4">
          <h3 class="text-base font-semibold mb-2">Calendar Export Unavailable</h3>
          <p class="text-sm">
          You need to generate a calendar token before you can export or subscribe to your schedule. Please visit your <%= link_to 'account settings', users_account_path, class: "underline" %> to generate one.
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>
