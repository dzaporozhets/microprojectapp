<section class="task-list space-y-6">
  <% if @monthly_tasks.any? %>
    <div class="current-tasks">
      <h2 class="py-1 text-base font-semibold text-gray-900 dark:text-gray-200"><%= @date.strftime("%B") %></h2>
      <ol class="mt-1 grid grid-cols-1 tasks-list">
        <% @monthly_tasks.each do |task| %>
          <%= render 'schedule/task', task: task %>
        <% end %>
      </ol>
    </div>
  <% else %>
    <div class="no-tasks py-6">
      <p class="text-sm text-center text-gray-500 dark:text-gray-400">There are no tasks scheduled for <%= @date.strftime("%B") %>.</p>
    </div>
  <% end %>


  <% if @past_due_tasks.any? || @upcoming_tasks.any? %>
    <hr/>
  <% end %>

  <% if @past_due_tasks.any? %>
    <div class="past-due-tasks">
      <h2 class="py-1 text-base font-semibold text-red-700 dark:text-red-400">Older tasks</h2>
      <ol class="mt-1 grid grid-cols-1 tasks-list">
        <% @past_due_tasks.each do |task| %>
          <%= render 'schedule/task', task: task %>
        <% end %>
      </ol>
    </div>
  <% end %>

  <% if @upcoming_tasks.any? %>
    <div class="upcoming-tasks">
      <h2 class="py-1 text-base font-semibold text-green-700 dark:text-green-400">Future tasks</h2>
      <ol class="mt-1 grid grid-cols-1 tasks-list">
        <% @upcoming_tasks.each do |task| %>
          <%= render 'schedule/task', task: task %>
        <% end %>
      </ol>
    </div>
  <% end %>
</section>
