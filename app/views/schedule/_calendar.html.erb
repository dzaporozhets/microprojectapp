<div class="calendar">
  <!-- Header with Month and Nav Buttons -->
  <div class="flex items-center">
    <h2 class="flex-auto text-sm font-semibold text-gray-900 dark:text-gray-100"><%= @date.strftime("%B %Y") %></h2>
    <%= link_to schedule_path(date: @date.prev_month), class: "prev-month -my-1.5 flex flex-none items-center justify-center p-1.5 text-gray-400 hover:text-gray-500" do %>
      <span class="sr-only">Previous month</span>
      <svg class="size-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
        <path fill-rule="evenodd" d="M11.78 5.22a.75.75 0 0 1 0 1.06L8.06 10l3.72 3.72a.75.75 0 1 1-1.06 1.06l-4.25-4.25a.75.75 0 0 1 0-1.06l4.25-4.25a.75.75 0 0 1 1.06 0Z" clip-rule="evenodd" />
      </svg>
    <% end %>
    <%= link_to schedule_path(date: @date.next_month), class: "next-month -my-1.5 -mr-1.5 ml-2 flex flex-none items-center justify-center p-1.5 text-gray-400 hover:text-gray-500" do %>
      <span class="sr-only">Next month</span>
      <svg class="size-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
        <path fill-rule="evenodd" d="M8.22 5.22a.75.75 0 0 1 1.06 0l4.25 4.25a.75.75 0 0 1 0 1.06l-4.25 4.25a.75.75 0 0 1-1.06-1.06L11.94 10 8.22 6.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" />
      </svg>
    <% end %>
  </div>

  <!-- Day Headings -->
  <div class="mt-6 grid grid-cols-7 text-center text-sm text-gray-500 dark:text-gray-400">
    <% Date::ABBR_DAYNAMES.rotate(1).each do |day| %>
      <div><%= day.first %></div>
    <% end %>
  </div>

  <!-- Days Grid -->
  <div class="mt-2 grid grid-cols-7 text-xs">
    <% start_day = @date.beginning_of_month.beginning_of_week(:monday) %>
    <% end_day = @date.end_of_month.end_of_week(:monday) %>

    <% (start_day..end_day).each do |day| %>
      <div class="py-1.5 border-t border-gray-200 dark:border-gray-700">
        <% count = @daily_task_counts[day] || 0 %>
        <% is_today = day == Date.current %>
        <% is_selected = false # set this if you want to highlight a selected day %>
        <% is_current_month = day.month == @date.month %>

        <% classes = [
          "mx-auto flex size-8 items-center justify-center rounded-full",
          (count > 0) ? "bg-violet-100 text-violet-900 dark:bg-violet-900 dark:text-violet-400 font-semibold" :
          is_selected ? (is_today ? "bg-violet-600 text-white font-semibold" : "bg-gray-900 text-white font-semibold") :
          is_today ? "bg-black dark:bg-white text-white dark:text-black font-semibold" :
          is_current_month ? "text-gray-900 dark:text-gray-100" : "text-gray-400",
          "hover:bg-gray-200 dark:hover:bg-gray-800"
        ].join(" ") %>

        <button type="button" class="<%= classes %>">
          <time datetime="<%= day.iso8601 %>"><%= day.day %></time>
        </button>
      </div>
    <% end %>
  </div>
</div>
