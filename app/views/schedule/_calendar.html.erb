<% date = @date || Date.today %>

<div class="calendar">
  <div class="flex items-center text-center text-gray-900">
    <%= link_to schedule_path(date: date.prev_month), class: "prev-month flex flex-none items-center justify-center py-2 -ml-4 px-4 text-gray-400 hover:text-gray-500 dark:hover:text-violet-200" do %>
      <span class="sr-only">Previous month</span>
      <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
        <path fill-rule="evenodd" d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z" clip-rule="evenodd" />
      </svg>
    <% end %>
    <div class="flex-auto text-sm font-semibold dark:text-gray-200"><%= date.strftime("%B %Y") %></div>
    <%= link_to schedule_path(date: date.next_month), class: "next-month flex flex-none items-center justify-center -mr-4 py-2 px-4 text-gray-400 hover:text-gray-500 dark:hover:text-violet-200" do %>
      <span class="sr-only">Next month</span>
      <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
        <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
      </svg>
    <% end %>
  </div>
</div>
