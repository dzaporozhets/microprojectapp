<div class=" space-y-6">
  <!-- Team Members Section -->
  <div class="resource-container">
    <!-- Header with actions -->
    <div class="resource-header">
      <div>
        <h3 class="resource-title">Team Members</h3>
        <p class="resource-description">Manage your project team and collaborate with others.</p>
      </div>
      <div>
        <% if current_user == @project.owner %>
          <%= link_to 'Invite People', invite_project_users_path(@project), class: theme_button_primary %>
        <% elsif @project.users.include?(current_user) %>
          <%= button_to 'Leave Project', leave_project_users_path(@project), method: :delete,
            class: "px-3 py-1.5 text-sm font-medium text-white bg-red-600 hover:bg-red-700 rounded-md shadow-sm dark:bg-red-700 dark:hover:bg-red-800 transition-colors",
            data: { turbo_confirm: 'Are you sure you want to leave this project?' } %>
        <% end %>
      </div>
    </div>

    <!-- Team members list -->
    <div class="bg-white dark:bg-gray-800">
      <% if @project.users.any? || @project.user == current_user %>
        <ul role="list" class="resource-list">
          <!-- Project Owner -->
          <li class="relative flex justify-between gap-x-6 px-4 py-3 hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors">
            <div class="flex min-w-0 gap-x-4 items-center">
              <%= avatar_tag(@project.user, "h-10 w-10 flex-none rounded-full bg-gray-200 dark:bg-gray-800") %>
              <div class="min-w-0 flex-auto">
                <p class="text-sm font-medium text-gray-900 dark:text-gray-200">
                  <%= link_to @project.user.email, project_tasks_path(@project, assigned_user_id: @project.user_id), class: theme_link_primary %>
                </p>
                <span class="inline-flex items-center rounded-md bg-violet-50 dark:bg-violet-900/30 px-2 py-1 text-xs font-medium text-violet-700 dark:text-violet-300 ring-1 ring-inset ring-violet-600/20 dark:ring-violet-500/30">
                  Project Owner
                </span>
              </div>
            </div>
          </li>

          <!-- Team Members -->
          <% @project.users.each do |user| %>
            <li id="project_<%= dom_id user %>" class="relative flex justify-between gap-x-6 px-4 py-3 hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors">
              <div class="flex min-w-0 gap-x-4 items-center">
                <%= avatar_tag(user, "h-10 w-10 flex-none rounded-full bg-gray-200 dark:bg-gray-800") %>
                <div class="min-w-0 flex-auto">
                  <p class="text-sm font-medium text-gray-900 dark:text-gray-200">
                    <%= link_to user.email, project_tasks_path(@project, assigned_user_id: user.id), class: theme_link_primary %>
                  </p>
                  <p class="mt-1 truncate text-xs text-gray-500 dark:text-gray-400">
                    Team Member
                  </p>
                </div>
              </div>

              <% if current_user == @project.owner %>
                <div class="flex items-center gap-x-2">
                  <%= button_to project_user_path(@project, user), method: :delete,
                    class: "rounded-full p-1 text-gray-500 hover:bg-gray-100 dark:hover:bg-gray-700 dark:text-gray-400 hover:text-red-600 dark:hover:text-red-400",
                    title: "Remove",
                    data: { turbo_confirm: 'Remove team member? Are you sure?' } do %>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                    </svg>
                  <% end %>
                </div>
              <% end %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <div class="resource-empty-state">
          <svg xmlns="http://www.w3.org/2000/svg" class="resource-empty-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M15 19.128a9.38 9.38 0 0 0 2.625.372 9.337 9.337 0 0 0 4.121-.952 4.125 4.125 0 0 0-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 0 1 8.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0 1 11.964-3.07M12 6.375a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0Zm8.25 2.25a2.625 2.625 0 1 1-5.25 0 2.625 2.625 0 0 1 5.25 0Z" />
          </svg>
          <h3 class="resource-empty-title">No team members</h3>
          <p class="resource-empty-description">Start collaborating by inviting people to your project.</p>
          <% if current_user == @project.owner %>
            <div class="resource-empty-action">
              <%= link_to invite_project_users_path(@project), class: theme_button_primary do %>
                Invite people
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Recent Activity Section -->
  <div class="resource-container">
    <div class="resource-header">
      <div class="flex items-center justify-between w-full">
        <div class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-500 dark:text-gray-400 mr-2">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <h2 class="resource-title">Recent Activity</h2>
        </div>
        <%= link_to project_activity_path(@project), class: "text-sm text-gray-500 hover:text-violet-600 dark:text-gray-400 dark:hover:text-violet-400" do %>
          View all activity
        <% end %>
      </div>
    </div>

    <% if @recent_activity.any? %>
      <div class="px-4 py-4 sm:px-6">
        <ol class="relative border-l border-gray-200 dark:border-gray-700 space-y-4">
          <% @recent_activity.each do |record| %>
            <%= render 'project/activity/record', record: record %>
          <% end %>
        </ol>
      </div>
    <% else %>
      <div class="resource-empty-state">
        <svg xmlns="http://www.w3.org/2000/svg" class="resource-empty-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <h3 class="resource-empty-title">No activity yet</h3>
        <p class="resource-empty-description">Activity will appear here as you and your team work on this project.</p>
      </div>
    <% end %>
  </div>
</div>
