<div id="<%= dom_id(comment) %>" class="comment-row">
  <div class="flex-shrink-0">
    <%= avatar_tag(comment.user, "h-8 w-8 rounded-full bg-gray-200 dark:bg-gray-600") %>
  </div>
  <div class="flex-1 min-w-0">
    <div class="flex items-center text-secondary mb-1">
      <span><%= comment.user.email %></span>
      <span class="mx-2">â€¢</span>
      <span><%= time_ago_short(comment.created_at) %></span>
      <% if current_user == comment.user && !comment.removed? %>
        <div class="ml-auto flex items-center">
          <%= button_to [comment.task.project, comment.task, comment], method: :delete, form: { data: { turbo_confirm: 'Remove this comment?' } }, class: "inline-flex items-center justify-center text-gray-400 hover:text-red-600" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-4 w-4" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
            </svg>
          <% end %>
        </div>
      <% end %>
    </div>

    <% if comment.removed? %>
      <div class="comment-body italic text-gray-500 dark:text-gray-400">
        This comment was removed.
      </div>
    <% else %>
      <div class="comment-body">
        <%= simple_format(auto_link(comment.body)) %>
      </div>
    <% end %>

    <% if comment.attachment.present? %>
      <div class="mt-3">
        <%= link_to comment.attachment.url, class: "inline-flex items-center px-3 py-1 text-xs font-medium text-gray-700 bg-gray-100 border border-gray-300 rounded-md hover:bg-gray-200 dark:text-gray-300 dark:bg-gray-700 dark:border-gray-600 dark:hover:bg-gray-600", target: :blank do %>
          <svg class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M15.621 4.379a3 3 0 00-4.242 0l-7 7a3 3 0 004.241 4.243h.001l.497-.5a.75.75 0 011.064 1.057l-.498.501-.002.002a4.5 4.5 0 01-6.364-6.364l7-7a4.5 4.5 0 016.368 6.36l-3.455 3.553A2.625 2.625 0 119.52 9.52l3.45-3.451a.75.75 0 111.061 1.06l-3.45 3.451a1.125 1.125 0 001.587 1.595l3.454-3.553a3 3 0 000-4.242z" clip-rule="evenodd" />
          </svg>
          <%= comment.attachment.file.filename %>
          (<%= number_to_human_size comment.attachment.file.size %>)
        <% end %>
      </div>
    <% end %>
  </div>
</div>
