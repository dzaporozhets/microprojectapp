<div id="<%= dom_id(comment) %>" class="border-t border-gray-200 py-4">
  <div class="flex items-start space-x-4">
    <div class="flex-shrink-0">
      <%= gravatar_tag(comment.user.email, "h-6 w-6 flex-none rounded-full bg-gray-50") %>
      <%#= comment.user.email %>
      <%#<span class="inline-block h-10 w-10 rounded-full bg-gray-200"></span>%>
    </div>
    <div class="flex-1">
      <div class="text-sm text-gray-500 mb-2">
        <%= comment.user.email %>
        <span class="text-xs text-gray-400 ml-2 inline"><%= time_ago_in_words comment.created_at %> ago</span>
      </div>
      <div class="text-sm text-gray-900 font-medium">
        <%= comment.body %>
      </div>
      <% if comment.attachment.present? %>
        <div class="">
          <% if false #comment.image_attachment? %>
            <%= link_to comment.attachment.url do %>
              <img src="<%= comment.attachment.url %>" alt="Attachment" class="max-w-full h-auto">
            <% end %>
          <% else %>
            <%= link_to comment.attachment.file.filename, comment.attachment.url, class: "text-sm text-indigo-600 hover:underline", target: :blank %>
          <% end %>
        </div>
      <% end %>
      <div class="">
        <%#= link_to 'Delete', task_comment_path(comment.task, comment), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-500 hover:underline' %>
      </div>
    </div>
  </div>
</div>
