<li id="<%= dom_id note %>" class="relative">
  <div class="flex items-start justify-between">
    <div class="flex items-start min-w-0">
      <!-- Note icon -->
      <div class="flex-shrink-0 h-10 w-10 flex items-center justify-center rounded-md bg-gray-100 dark:bg-gray-800">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-600 dark:text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m2.25 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
        </svg>
      </div>

      <div class="ml-4 min-w-0 flex-1">
        <div class="flex items-center">
          <%= link_to note.title, edit_project_note_path(note.project, note), class: "text-sm font-medium #{theme_link_primary} truncate" %>
        </div>
        <div class="mt-1 text-xs text-gray-500 dark:text-gray-400">
          <% if note.content.present? %>
            <span><%= truncate(note.content, length: 100) %></span>
          <% else %>
            <span class="text-gray-400 dark:text-gray-500">(No content)</span>
          <% end %>
        </div>
        <% if note.updated_at.present? %>
          <div class="mt-1 text-xs text-gray-400 dark:text-gray-500">
            Updated <%= time_ago_in_words(note.updated_at) %> ago
          </div>
        <% end %>
      </div>
    </div>

    <div class="flex-shrink-0 flex items-center space-x-2">
      <!-- Edit button -->
      <%= link_to edit_project_note_path(note.project, note), class: "inline-flex items-center p-1.5 border border-gray-300 dark:border-gray-700 rounded-md shadow-sm text-gray-500 dark:text-gray-400 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-violet-500", title: "Edit" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
      <% end %>

      <!-- Delete button -->
      <% if current_user == note.user %>
        <%= button_to project_note_path(note.project, note), method: :delete, data: { "turbo-method": :delete, turbo_confirm: 'Delete this note? Are you sure?' }, alt: 'Delete note', class: "inline-flex items-center p-1.5 border border-gray-300 dark:border-gray-700 rounded-md shadow-sm text-red-500 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500", title: "Delete" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
          </svg>
        <% end %>
      <% end %>
    </div>
  </div>
</li>
