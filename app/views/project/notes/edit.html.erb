<div class="flex flex-col-reverse lg:flex-row mx-auto w-full -mt-4">
  <!-- Sidebar -->
  <%= render 'project/notes/sidebar' %>

  <!-- Main Content -->
  <div class="w-full py-4 overflow-y-auto">
    <%= form_with(model: [@project, @note], class: "contents", data: { controller: "local-storage", document_id: @note.id }) do |form| %>
      <%= render "shared/errors", resource: @note %>

      <div class="mt-2 p-2 bg-yellow-100 dark:bg-gray-800 shadow-sm border dark:border-gray-600 border-gray-400">
        <div class="flex items-center justify-between mb-4 text-sm border-b pb-2 border-gray-400 dark:border-gray-600 h-12">
          <%= link_to history_project_note_path(@project, @note), class: 'text-gray-600 dark:text-gray-400 hover:underline' do %>
            <p>Last updated: <%= l(@note.updated_at, format: :long) %></p>
          <% end %>
          <div class="flex items-center gap-1 dark:text-gray-400 ml-auto">
            <% if flash[:notice].present? %>
              <div
                  data-controller="hide-div"
                  class="py-2 px-3 text-sm text-gray-600 dark:text-gray-300" role="alert">
                <% if flash[:notice] == 'Saved' %>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M10.125 2.25h-4.5c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125v-9M10.125 2.25h.375a9 9 0 0 1 9 9v.375M10.125 2.25A3.375 3.375 0 0 1 13.5 5.625v1.5c0 .621.504 1.125 1.125 1.125h1.5a3.375 3.375 0 0 1 3.375 3.375M9 15l2.25 2.25L15 12" />
                  </svg>
                <% else %>
                  <%= flash[:notice] %>
                <% end %>
              </div>
            <% end %>

            <%= form.submit 'Save Changes', class: "btn-primary-sm" %>
          </div>
        </div>

        <div>
          <%= form.text_field :title, class: "block w-full text-lg font-semibold border-none bg-transparent outline-none focus:ring-0 focus:outline-none dark:text-yellow-600", required: true %>
        </div>

        <div>
          <%= form.text_area :content, data: { local_storage_target: "textarea" }, rows: 24, class: "block w-full border-none bg-transparent outline-none focus:ring-0 focus:outline-none dark:text-yellow-600" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
