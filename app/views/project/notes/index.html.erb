<div class="col-span-1">
  <div class="mb-4">
    <dt class="mb-2 pb-2 border-b dark:border-gray-800">
      <p class="text-xl font-bold leading-7 text-gray-900 dark:text-gray-200">Notes</p>
      <p class="text-xs text-gray-500">Create notes or instructions and attach them to tasks for seamless collaboration.</p>
    </dt>
    <dd class="mt-2 text-sm text-gray-900 dark:text-gray-200">
      <ul role="list">
        <% @project.notes.each do |note| %>
          <%= render 'project/notes/note', note: note %>
        <% end %>
        <li class="flex items-center justify-between px-4 py-2 text-sm leading-6">
          <div class="flex w-0 flex-1 items-center">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5 flex-shrink-0 fill-gray-200 text-gray-400 dark:text-gray-600">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
            </svg>

            <div class="ml-4 flex min-w-0 flex-1 gap-2">
              <%= link_to "Add a note", new_project_note_path(@project), class: "truncate text-gray-600 dark:text-gray-400 hover:text-indigo-700 dark:hover:text-indigo-300", data: { turbo: false } %>
            </div>
          </div>
        </li>
      </ul>
    </dd>
  </div>
</div>
