<div class="">
  <div class="resource-container">
    <!-- Header with actions -->
    <div class="resource-header">
      <div>
        <h3 class="resource-title">Project Notes</h3>
        <p class="resource-description">Create notes or instructions and attach them to tasks for seamless collaboration.</p>
      </div>
      <div>
        <%= link_to 'Add Note', new_project_note_path(@project), class: theme_button_primary %>
      </div>
    </div>

    <!-- Notes list -->
    <div class="bg-base">
      <% if @project.notes.any? %>
        <ul role="list" class="resource-list">
          <% @project.notes.each do |note| %>
            <%= render 'project/notes/note', note: note %>
          <% end %>
        </ul>
      <% else %>
        <div class="resource-empty-state">
          <svg xmlns="http://www.w3.org/2000/svg" class="resource-empty-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m2.25 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
          </svg>
          <h3 class="resource-empty-title">No notes</h3>
          <p class="resource-empty-description">Get started by creating your first project note.</p>
          <div class="resource-empty-action">
            <%= link_to new_project_note_path(@project), class: theme_button_primary do %>
              Add a note
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
