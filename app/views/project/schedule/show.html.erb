<div class="space-y-6">
  <!-- Past Due Tasks -->
  <% if @tasks_past_due.any? %>
    <%= render 'shared/divider', text: 'Older Tasks', text_class: 'text-red-700 dark:text-red-400' %>

    <ol class="text-sm leading-6 text-gray-500 tasks-list">
      <% @tasks_past_due.each do |task| %>
        <%= render 'project/schedule/task', task: task %>
      <% end %>
    </ol>
  <% end %>

  <!-- Current Month -->
  <%= render 'shared/divider', text: Date.current.strftime("%B") %>

  <% if @tasks_due_this_month.any? %>
    <ol class="text-sm leading-6 text-gray-500 tasks-list">
      <% @tasks_due_this_month.each do |task| %>
        <%= render 'project/schedule/task', task: task %>
      <% end %>
    </ol>
  <% else %>
    <div class="resource-empty-state">
      <svg xmlns="http://www.w3.org/2000/svg" class="resource-empty-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
      </svg>
      <h3 class="resource-empty-title">No tasks this month</h3>
      <p class="resource-empty-description">
        No tasks due this month. <%= link_to 'Assign some random tasks?', saturate_project_schedule_path(@project, month: Date.current.strftime("%Y-%m")), method: :post, data: { turbo_method: :post }, class: "link-primary" %>
      </p>
    </div>
  <% end %>

  <!-- Next Month -->
  <%= render 'shared/divider', text: Date.current.next_month.strftime("%B") %>

  <% if @tasks_due_next_month.any? %>
    <ol class="text-sm leading-6 text-gray-500 tasks-list">
      <% @tasks_due_next_month.each do |task| %>
        <%= render 'project/schedule/task', task: task %>
      <% end %>
    </ol>
  <% else %>
    <div class="resource-empty-state">
      <svg xmlns="http://www.w3.org/2000/svg" class="resource-empty-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
      </svg>
      <h3 class="resource-empty-title">No tasks next month</h3>
      <p class="resource-empty-description">
        No tasks due next month. <%= link_to 'Assign some random tasks?', saturate_project_schedule_path(@project, month: Date.current.next_month.strftime("%Y-%m")), method: :post, data: { turbo_method: :post }, class: "link-primary" %>
      </p>
    </div>
  <% end %>

  <!-- Month After Next -->
  <%= render 'shared/divider', text: Date.current.next_month.next_month.strftime("%B") %>

  <% if @tasks_due_month_after_next.any? %>
    <ol class="text-sm leading-6 text-gray-500 tasks-list">
      <% @tasks_due_month_after_next.each do |task| %>
        <%= render 'project/schedule/task', task: task %>
      <% end %>
    </ol>
  <% else %>
    <div class="resource-empty-state">
      <svg xmlns="http://www.w3.org/2000/svg" class="resource-empty-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
      </svg>
      <h3 class="resource-empty-title">No tasks in <%= Date.current.next_month.next_month.strftime("%B") %></h3>
      <p class="resource-empty-description">
        No tasks due <%= Date.current.next_month.next_month.strftime("%B") %>. <%= link_to 'Assign some random tasks?', saturate_project_schedule_path(@project, month: Date.current.next_month.next_month.strftime("%Y-%m")), method: :post, data: { turbo_method: :post }, class: "link-primary" %>
      </p>
    </div>
  <% end %>
</div>
