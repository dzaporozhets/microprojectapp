<%= content_tag :div, class: "mt-2 border border-gray-100 dark:border-gray-900 shadow-sm rounded-md p-3 py-1.5 md:py-2 bg-gray-50 dark:bg-gray-950" do %>
  <div class="flex col-span-1 items-center h-12">
    <div class="mr-3 flex">
      <%= form_with(model: task, url: toggle_done_project_task_path(task.project, task), local: false, data: { turbo: false }) do |form| %>

        <%= form.check_box :done,
          checked: task.done,
          id: "task_#{task.id}",
          class: "w-4 h-4 checkbox",
          data: { turbo_action: "advance" },
          onchange: "this.form.requestSubmit()" %>
      <% end %>
    </div>

    <%= link_to details_project_task_path(task.project, task), data: { turbo: false }, class: "text-sm min-w-0 grow flex h-12 items-center" do %>
      <p class="font-medium text-gray-900 dark:text-gray-100 line-clamp-2"><%= task.name %></p>
    <% end %>

    <div class="ml-2 flex-none mr-1">
      <time datetime="<%= task.due_date %>" class=""><%= I18n.l(task.due_date.to_date, format: :short) %></time>
    </div>
  </div>
<% end %>
