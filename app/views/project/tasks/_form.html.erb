<%- task = defined?(task) && task ? task : Task.new %>
<%= turbo_frame_tag "new_task" do %>
  <%= form_with(model: [project, task], local: false) do |form| %>
    <% if task.errors.any? %>
      <div id="ar-errors-text" data-turbo-cache="false" class="p-4 mb-4 bg-gray-50 rounded border text-red-700">
        <%= render("project/tasks/form_errors", resource: task) %>
      </div>
    <% end %>

    <div class="mb-2 flex w-full bg-white shadow-sm p-2 rounded-md border border-neutral-100 dark:bg-gray-800 dark:border-gray-700 focus-within:border-violet-300">
      <div class="flex items-center ml-1 text-gray-500 opacity-50">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 16.875h3.375m0 0h3.375m-3.375 0V13.5m0 3.375v3.375M6 10.5h2.25a2.25 2.25 0 0 0 2.25-2.25V6a2.25 2.25 0 0 0-2.25-2.25H6A2.25 2.25 0 0 0 3.75 6v2.25A2.25 2.25 0 0 0 6 10.5Zm0 9.75h2.25A2.25 2.25 0 0 0 10.5 18v-2.25a2.25 2.25 0 0 0-2.25-2.25H6a2.25 2.25 0 0 0-2.25 2.25V18A2.25 2.25 0 0 0 6 20.25Zm9.75-9.75H18a2.25 2.25 0 0 0 2.25-2.25V6A2.25 2.25 0 0 0 18 3.75h-2.25A2.25 2.25 0 0 0 13.5 6v2.25a2.25 2.25 0 0 0 2.25 2.25Z" />
        </svg>
      </div>

      <div class="flex-grow">
        <%= form.text_field :name, class: "new-task-input w-full text-sm p-2", required: true, placeholder: "What needs to be done?", autocomplete: "off", inputmode: 'text' %>
      </div>

      <%= form.button type: :submit, title: 'Add task', class: "btn-primary inline-block ml-2 p-2 rounded-full" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 12 3.269 3.125A59.769 59.769 0 0 1 21.485 12 59.768 59.768 0 0 1 3.27 20.875L5.999 12Zm0 0h7.5" />
        </svg>
      <% end %>

      <%= link_to new_project_task_path(project), class: "hidden rounded-md py-2 px-4 bg-gray-100 text-gray-500 cursor-pointer text-sm ms-3", data: { turbo: false } do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904 9 18.75l-.813-2.846a4.5 4.5 0 0 0-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 0 0 3.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 0 0 3.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 0 0-3.09 3.09ZM18.259 8.715 18 9.75l-.259-1.035a3.375 3.375 0 0 0-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 0 0 2.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 0 0 2.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 0 0-2.456 2.456ZM16.894 20.567 16.5 21.75l-.394-1.183a2.25 2.25 0 0 0-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 0 0 1.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 0 0 1.423 1.423l1.183.394-1.183.394a2.25 2.25 0 0 0-1.423 1.423Z" />
        </svg>
      <% end %>
    </div>
  <% end %>
<% end %>


<button
    id="floating-plus"
    title="Add Task"
    class="fixed bottom-6 right-6 z-50 block md:hidden p-4 btn-primary rounded-full shadow-lg focus:outline-none"
    onclick="document.getElementById('task_name').focus()"
    >
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
    </svg>
</button>
