<div class="w-full">
  <div class="mx-auto">
    <div class="flex flex-col md:flex-row md:space-x-12">
      <div class="md:mb-0 md:w-2/3">
        <%= turbo_frame_tag "task_#{@task.id}", data: { edit_task: true } do %>
          <%= content_tag :div, class: "border border-gray-200 shadow-sm rounded-md p-3" do %>
            <%#= link_to project_task_url(@project, @task), project_task_url(@project, @task), target: :_blank, class: "text-indigo-700" %>

            <%= form_with(model: [@project, @task], class: "contents") do |form| %>
              <div class="mb-3">
                <%= form.label :name, class: "text-sm text-gray-500" %>
                <%= form.text_field :name, class: "block rounded-md border border-gray-400 outline-none text-sm px-2 py-1.5 w-full" %>
              </div>

              <div class="mb-3">
                <%= form.label :description, class: "text-sm text-gray-500" %>
                <%= form.text_area :description, rows: calc_textarea_rows(@task.description), class: "block rounded-md text-sm border border-gray-400 outline-none px-2 py-1.5 mt-2 w-full resize-y" %>
              </div>

              <div class="mb-3">
                <%= form.label :due_date, class: "text-sm text-gray-500" %>
                <%= form.select :due_date, options_for_select(due_date_options(@task.due_date)), {}, { class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" } %>
              </div>

              <%= form.submit 'Update', class: "rounded-lg py-2 px-4 bg-indigo-700 text-white inline-block text-sm cursor-pointer" %>
            <% end %>

            <%#= link_to 'Open in a new tab', details_project_task_path(@project, @task), class: "rounded-md py-2 px-4 bg-gray-100 text-gray-500 cursor-pointer text-sm float-right", target: :_blank %>

            <div class="mt-3 border-t pt-3">
              <%= link_to project_task_path(@project, @task), class: "rounded-md py-2 px-4 bg-gray-100 text-gray-500 inline-block cursor-pointer inline-block text-sm" do %>
                <span>Cancel</span>
              <% end %>
              <%= button_to "Delete", [@project, @task], method: :delete, data: { turbo_confirm: 'Delete the task? Are you sure?' }, class: "rounded-lg py-2 px-4 bg-gray-100 text-sm text-red-800 hover:bg-red-100", form_class: "float-right" %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
