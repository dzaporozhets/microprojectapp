<div class="w-full">
  <div class="mx-auto">
    <div class="flex flex-col md:flex-row md:space-x-12">
      <div class="md:mb-0 md:w-2/3">
        <%= turbo_frame_tag "task_#{@task.id}", data: { edit_task: true } do %>
          <div class="">
            <div class="rounded-md border shadow-sm p-5 mb-4 border-gray-200">
              <%#= link_to project_task_url(@project, @task), project_task_url(@project, @task), target: :_blank, class: "text-indigo-700" %>

              <%= render 'edit_form' %>

              <%= link_to 'Open in a new tab', details_project_task_path(@project, @task), class: "rounded-md py-3 px-5 bg-gray-100 text-gray-500 cursor-pointer text-sm float-right", target: :_blank %>

              <div class="mt-4 border-t pt-4">
                <%= link_to project_task_path(@project, @task), class: "rounded-md py-2 px-5 bg-gray-100 text-gray-500 inline-block cursor-pointer inline-block text-sm" do %>
                  <span>Cancel</span>
                <% end %>
                <%= button_to "Delete", [@project, @task], method: :delete, data: { turbo_confirm: 'Delete the task? Are you sure?' }, class: "rounded-lg py-2 px-5 bg-gray-100 text-sm text-red-800 hover:bg-red-100", form_class: "float-right" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
