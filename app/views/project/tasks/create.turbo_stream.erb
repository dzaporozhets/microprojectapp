<% if @task.id %>
  <%= turbo_stream.prepend('tasks', partial: "project/tasks/task", locals: { task: @task }) %>
  <%= turbo_stream.replace 'new_task', partial: 'project/tasks/form', locals: { project: @project } %>
<% else %>
  <%= turbo_stream.replace 'new_task', partial: 'project/tasks/form', locals: { project: @project, task: @task } %>
<% end %>
