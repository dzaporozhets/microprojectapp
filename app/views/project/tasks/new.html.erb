<div class="lg:w-2/3 mx-auto mt-4">
  <%= display_flash %>

  <div class="resource-container">
    <div class="resource-header">
      <div class="flex items-center justify-between w-full">
        <div>
          <h1 class="resource-title">New task</h1>
        </div>

        <div class="flex items-center space-x-2">
          <%= link_to collapse_task_path(@project), class: 'btn-sm', data: { turbo: true }, title: 'Back to tasks list' do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
            </svg>
          <% end %>
        </div>
      </div>
    </div>

    <%= form_with(model: [@project, @task], data: { turbo: false }) do |form| %>
      <% if @task.errors.any? %>
        <div id="ar-errors-text" data-turbo-cache="false" class="p-4 mb-4 bg-red-50 border border-red-200 rounded-md dark:bg-red-900/20 dark:border-red-800">
          <%= render("project/tasks/form_errors", resource: @task) %>
        </div>
      <% end %>

      <div class="p-4 space-y-6">
        <div>
          <%= form.label :name, class: "block text-sm font-medium text-gray-900 dark:text-gray-200 mb-2" %>
          <%= form.text_area :name, class: "block w-full base-input", required: true, rows: 2, placeholder: "Enter task name..." %>
        </div>

        <div>
          <%= form.label :description, class: "block text-sm font-medium text-gray-900 dark:text-gray-200 mb-2" %>
          <%= form.text_area :description, class: "block w-full base-input resize-y", rows: 3, placeholder: "Enter task description..." %>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 py-3 border-t border-gray-200 dark:border-gray-700">
          <div>
            <%= form.label :due_date, class: "block text-sm font-medium text-gray-900 dark:text-gray-200 mb-2" %>
            <%= form.date_field :due_date, class: "block w-full base-input" %>
          </div>

          <% unless @project.personal? %>
            <div>
              <%= form.label :assigned_user_id, class: "block text-sm font-medium text-gray-900 dark:text-gray-200 mb-2" %>
              <%= form.collection_select :assigned_user_id, @project.team, :id, :email, { include_blank: "None" }, { class: "block w-full base-input" } %>
            </div>
          <% end %>
        </div>

        <% if @project.notes.any? %>
          <div class="py-3 border-t border-gray-200 dark:border-gray-700">
            <%= form.label :note_id, class: "block text-sm font-medium text-gray-900 dark:text-gray-200 mb-2" %>
            <%= form.collection_select :note_id, @project.notes, :id, :title, { include_blank: "None" }, { class: "block w-full base-input" } %>
          </div>
        <% end %>

        <div class="pt-4 border-t border-gray-200 dark:border-gray-700">
          <%= form.submit 'Create task', class: theme_button_primary %>
        </div>
      </div>
    <% end %>
  </div>
</div>
