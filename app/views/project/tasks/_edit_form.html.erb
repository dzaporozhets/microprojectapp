<%= form_with(model: [@project, @task], class: "contents") do |form| %>
  <div class="my-5">
    <%= form.label :name, class: "text-sm text-gray-500" %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :description, class: "text-sm text-gray-500" %>
    <%= form.text_area :description, rows: calc_textarea_rows(@task.description), class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full resize-y" %>
  </div>

  <div class="text-sm text-gray-500 my-5">
    <p>Created by: <span class="font-medium"><%= @task.user.email %></span></p>
    <p>Last updated at: <span class="font-medium"><%= l(@task.updated_at, format: :long) %></span></p>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-indigo-700 text-white inline-block text-sm cursor-pointer" %>
  </div>
<% end %>
