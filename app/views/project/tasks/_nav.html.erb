<div class="mb-4 bg-indigo-50 dark:bg-indigo-900 rounded-md">
  <dd class="text-sm text-indigo-900 dark:text-indigo-200">
    <div class="flex items-center justify-start space-x-6 p-4">
      <!-- Active Tab -->
      <div class="flex items-center gap-1">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5 text-indigo-400 dark:text-indigo-400">
          <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 6.75h12M8.25 12h12m-12 5.25h12M3.75 6.75h.007v.008H3.75V6.75Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0ZM3.75 12h.007v.008H3.75V12Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm-.375 5.25h.007v.008H3.75v-.008Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
        </svg>
        <%= link_to "Active", project_path(@project), class: "text-sm hover:text-indigo-700 dark:hover:text-indigo-300 #{'font-bold' if current_page?(project_path(@project))}" %>
      </div>

      <!-- Upcoming Tab -->
      <div class="flex items-center gap-1">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5 text-indigo-400 dark:text-gray-400">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5" />
        </svg>
        <%= link_to "Upcoming", project_schedule_path(@project), class: "text-sm hover:text-indigo-700 dark:hover:text-indigo-300 #{'font-bold' if current_page?(project_schedule_path(@project))}" %>
      </div>

      <!-- Completed Tab -->
      <div class="flex items-center gap-1">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5 text-indigo-400 dark:text-gray-400">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
        </svg>
        <%= link_to "Completed", project_tasks_path(@project, status: 'done'), class: "text-sm hover:text-indigo-700 dark:hover:text-indigo-300 #{'font-bold' if current_page?(project_tasks_path(@project, status: 'done'))}" %>
      </div>
    </div>
  </dd>
</div>

