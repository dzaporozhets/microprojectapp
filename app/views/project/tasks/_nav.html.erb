<div class="mb-4 text-black flex items-center justify-between space-x-6 text-sm">
  <div class="inline-flex items-center gap-1 p-1 bg-violet-100 dark:bg-violet-950 rounded-full border border-violet-200 dark:border-violet-800">
    <%= link_to "Active", project_path(@project), class: " #{current_page?(project_path(@project)) || current_page?(project_tasks_path(@project)) ? 'btn-seg-ctl-active' : 'btn-seg-ctl' }" %>
    <%= link_to "Upcoming", project_schedule_path(@project), class: " #{current_page?(project_schedule_path(@project)) ? 'btn-seg-ctl-active' : 'btn-seg-ctl' }" %>
    <%= link_to "Completed", completed_project_tasks_path(@project), class: " #{current_page?(completed_project_tasks_path(@project)) ? 'btn-seg-ctl-active' : 'btn-seg-ctl'}" %>
  </div>

  <div class="flex items-center ml-auto space-x-2 hidden md:flex">
    <%= link_to project_tasks_path(@project, assigned_user_id: @project.user_id), title: @project.user.email do %>
      <%= avatar_tag(@project.user, "h-8 w-8 rounded-full bg-violet-300 dark:bg-gray-800") %>
    <% end %>

    <% @project.users.each do |user| %>
      <%= link_to project_tasks_path(@project, assigned_user_id: user.id), title: user.email do %>
        <%= avatar_tag(user, "h-8 w-8 rounded-full bg-violet-300 dark:bg-gray-800") %>
      <% end %>
    <% end %>
  </div>
</div>
