<%= turbo_frame_tag dom_id(@task), data: { details: true } do %>
  <%= content_tag :div, class: "border border-gray-400 dark:border-gray-600 shadow-sm rounded-md" do %>
    <div class="border-b dark:border-b-gray-600 text-sm flex items-center p-3 rounded-t-md <%= @task.done ? 'bg-gray-300 dark:bg-gray-700 text-gray-700 dark:text-gray-300' : 'bg-indigo-100 dark:bg-indigo-900 text-indigo-900 dark:text-indigo-100' %>">
      <div class="flex-none">
        <%= form_with(model: @task, url: toggle_done_project_task_path(@task.project, @task), local: false, data: { turbo: true }) do |form| %>
          <%= form.check_box :done,
            checked: @task.done,
            id: "task_#{@task.id}",
            class: "w-4 h-4 checkbox",
            data: { turbo_action: "advance" },
            onchange: "this.form.requestSubmit()" %>
        <% end %>
      </div>

      <div class="grow mx-2 text-center">
      </div>

      <div class="flex-none">
        <%= link_to toggle_star_project_task_path(@task.project, @task), method: :patch, data: { turbo: true, turbo_method: :patch }, class: 'flex-none', title: 'Star' do %>
          <%= render 'project/tasks/star', task: @task %>
        <% end %>

        <%= link_to edit_project_task_path(@task.project, @task), class: "ml-6", data: { turbo: true }, title: 'Edit' do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5 inline-block">
            <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
          </svg>
        <% end %>

        <%= link_to details_project_task_path(@project, @task), class: "ml-6", data: { turbo: false }, title: 'Expand' do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 inline-block">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 3.75v4.5m0-4.5h4.5m-4.5 0L9 9M3.75 20.25v-4.5m0 4.5h4.5m-4.5 0L9 15M20.25 3.75h-4.5m4.5 0v4.5m0-4.5L15 9m5.25 11.25h-4.5m4.5 0v-4.5m0 4.5L15 15" />
          </svg>
        <% end %>

        <%= link_to project_task_path(@project, @task), class: "ml-6" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 inline-block">
            <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 15.75 7.5-7.5 7.5 7.5" />
          </svg>
        <% end %>
      </div>
    </div>

    <div class="p-3 my-3">
      <h1 class="text-xl font-bold leading-6 text-gray-900 dark:text-gray-200 break-words"><%= @task.name %></h1>

      <% if @task.description.present? %>
        <div class="text-base leading-6 text-gray-900 dark:text-gray-200 mt-2 prose max-w-none break-words"><%= simple_format @task.description %></div>
      <% end %>
    </div>

    <% if @task.assigned_user_id %>
      <div class="text-sm text-gray-600 dark:text-gray-400 border-t dark:border-t-gray-600 p-3">
        <p>Assigned to <span class="font-bold"><%= @task.assigned_user&.email %></span></p>
      </div>
    <% end %>

    <% if @task.due_date.present? %>
      <div class="text-sm text-gray-600 dark:text-gray-400 border-t dark:border-t-gray-600 p-3">
        <p>Due on <span class="font-bold"><%= l(@task.due_date.to_date, format: :long) %></span></p>
      </div>
    <% end %>

    <%= render 'project/tasks/comments' %>
  <% end %>
<% end %>
