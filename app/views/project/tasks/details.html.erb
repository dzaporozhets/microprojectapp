<div class="mt-6 md:mt-10 sm:mx-auto sm:w-full sm:max-w-lg">
  <%= content_tag :div, class: "border border-gray-400 dark:border-gray-600 shadow-sm rounded-md" do %>
    <div class="border-b dark:border-b-gray-600 text-sm flex items-center p-3 <%= @task.done ? 'bg-gray-300 dark:bg-gray-700 text-gray-700 dark:text-gray-300' : 'bg-indigo-100 dark:bg-indigo-900 text-indigo-900 dark:text-indigo-100' %> rounded-t-md">
      <div class="flex-none">
        <%= form_with(model: @task, url: project_task_path(@task.project, @task), local: false, data: { turbo: false }) do |form| %>
          <%= form.check_box :done,
            checked: @task.done,
            id: "task_#{@task.id}",
            class: "w-4 h-4 checkbox",
            data: { turbo_action: "advance" },
            onchange: "this.form.requestSubmit()" %>
        <% end %>
      </div>

      <div class="grow mx-2">
      </div>

      <div class="inline-block">
        <%= link_to edit_project_task_path(@task.project, @task), data: { turbo: true }, class: 'flex-none', title: 'Edit' do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5 inline-block">
            <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
          </svg>
        <% end %>

        <%= link_to collapse_task_path, class: "ml-6", data: { turbo: true } do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 inline-block">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 9V4.5M9 9H4.5M9 9 3.75 3.75M9 15v4.5M9 15H4.5M9 15l-5.25 5.25M15 9h4.5M15 9V4.5M15 9l5.25-5.25M15 15h4.5M15 15v4.5m0-4.5 5.25 5.25" />
          </svg>
        <% end %>
      </div>
    </div>


    <div class="p-3 my-3">
      <h1 class="text-2xl font-bold text-gray-900 dark:text-gray-200 break-words"><%= @task.name %></h1>

      <% if @task.description.present? %>
        <div class="text-base leading-6 text-gray-900 dark:text-gray-200 mt-2 prose max-w-none break-words"><%= simple_format @task.description %></div>
      <% end %>
    </div>

    <% if @task.due_date.present? %>
      <div class="text-sm text-gray-600 dark:text-gray-400 border-t dark:border-t-gray-600 p-3">
        <p>Due on <span class="font-bold"><%= l(@task.due_date.to_date, format: :long) %></span></p>
      </div>
    <% end %>

    <div class="text-xs text-gray-500 border-t dark:border-t-gray-600 p-3">
      <p>Created by: <span class="font-medium"><%= @task.user.email %></span></p>
      <p>Created at: <span class="font-medium"><%= l(@task.created_at, format: :long) %></span></p>
      <p>Last updated at: <span class="font-medium"><%= l(@task.updated_at, format: :long) %></span></p>

      <% if @task.done && @task.done_at %>
        <p>Marked as done at: <span class="font-medium"><%= l(@task.done_at, format: :long) %></span></p>
      <% end %>
    </div>

    <%= render 'project/tasks/comments' %>
  <% end %>
</div>
