<div class="lg:w-2/3 mx-auto mt-4">
  <%= display_flash %>

  <div class="resource-container">
    <div class="resource-header">
      <div class="flex items-center justify-between w-full">
        <div class="flex items-center">
          <%= form_with(model: @task, url: project_task_path(@task.project, @task), local: false, data: { turbo: false }) do |form| %>
            <%= form.label :done, class: 'flex items-center' do %>
              <%= form.check_box :done,
                checked: @task.done,
                id: "task_#{@task.id}",
                class: "w-5 h-5 #{theme_checkbox_round} mr-2",
                data: { turbo_action: "advance" },
                onchange: "this.form.requestSubmit()" %>
              <span class="text-sm text-gray-600 dark:text-gray-400">
                <%= @task.done ? 'Completed' : 'Mark as completed' %>
              </span>
            <% end %>
          <% end %>
        </div>

        <div class="flex items-center space-x-2">
          <%= link_to toggle_star_project_task_path(@task.project, @task), method: :patch, data: { turbo: true, turbo_method: :patch }, class: 'btn-sm', title: 'Star' do %>
            <%= render 'project/tasks/star', task: @task, text: true %>
          <% end %>

          <%= link_to edit_project_task_path(@task.project, @task), data: { turbo: true }, class: 'btn-sm', title: 'Edit' do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
            </svg>
          <% end %>

          <%= link_to collapse_task_path(@task.project), class: 'btn-sm', data: { turbo: true }, title: 'Back to tasks list' do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
            </svg>
          <% end %>
        </div>
      </div>
    </div>

    <div class="p-4">
      <h1 class="resource-title mb-4"><%= @task.name %></h1>

      <% if @task.description.present? %>
        <div class="prose max-w-none break-words mb-6">
          <%= simple_format @task.description %>
        </div>
      <% end %>

      <div class="space-y-4">
        <% if @task.note_id %>
          <div class="flex items-center py-3 border-b border-gray-200 dark:border-gray-700">
            <span class="text-sm font-medium text-gray-900 dark:text-gray-200 w-24">Note:</span>
            <span class="text-sm text-gray-700 dark:text-gray-300">
              <%= link_to @task.note&.title, [@task.project, @task.note], target: '_blank', class: 'underline hover:text-gray-900 dark:hover:text-gray-100' %>
            </span>
          </div>
        <% end %>

        <% if @task.assigned_user_id %>
          <div class="flex items-center py-3 border-b border-gray-200 dark:border-gray-700">
            <span class="text-sm font-medium text-gray-900 dark:text-gray-200 w-24">Assigned:</span>
            <span class="text-sm text-gray-700 dark:text-gray-300"><%= @task.assigned_user&.email %></span>
          </div>
        <% end %>

        <% if @task.due_date.present? %>
          <div class="flex items-center py-3 border-b border-gray-200 dark:border-gray-700">
            <span class="text-sm font-medium text-gray-900 dark:text-gray-200 w-24">Due:</span>
            <span class="text-sm text-gray-700 dark:text-gray-300"><%= l(@task.due_date.to_date, format: :long) %></span>
          </div>
        <% end %>

        <div class="pt-4 border-t border-gray-200 dark:border-gray-700">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-gray-600 dark:text-gray-400">
            <div>
              <span class="font-medium text-gray-900 dark:text-gray-200">Created by:</span>
              <span class="ml-2"><%= @task.user.email %></span>
            </div>
            <div>
              <span class="font-medium text-gray-900 dark:text-gray-200">Created at:</span>
              <span class="ml-2"><%= l(@task.created_at, format: :long) %></span>
            </div>
            <div>
              <span class="font-medium text-gray-900 dark:text-gray-200">Last updated:</span>
              <span class="ml-2"><%= l(@task.updated_at, format: :long) %></span>
            </div>
            <% if @task.done && @task.done_at %>
              <div>
                <span class="font-medium text-gray-900 dark:text-gray-200">Completed at:</span>
                <span class="ml-2"><%= l(@task.done_at, format: :long) %></span>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%= render 'project/tasks/comments' %>
</div>
