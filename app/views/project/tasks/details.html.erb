<div class="w-full">
  <div class="mx-auto w-full">
    <div class="flex flex-col md:flex-row md:space-x-12 mt-10">
      <div class="mb-4 lg:mb-0 lg:w-2/3">
        <%= render 'project/tasks/task', task: @task %>

        <div class="comments mt-10">
          <h3 class="text-sm font-medium leading-6 text-gray-900">Comments</h3>

          <div class="mt-4">
            <%= render 'project/comments/comments' %>
          </div>

          <%= render 'project/comments/form' %>
        </div>
      </div>
      <div class="mb-4 lg:mb-0 lg:w-1/3">
        <div class="text-sm text-gray-500 border-l border-gray-400 p-4">
          <p>Task ID: <span class="font-medium"><%= @task.id %></span></p>
          <p>Project ID: <span class="font-medium"><%= @task.project_id %></span></p>
          <p>Status: <span class="font-medium"><%= @task.done ? 'Done' : 'Open' %></span></p>
          <p>Created by: <span class="font-medium"><%= @task.user.email %></span></p>
          <p>Created at: <span class="font-medium"><%= l(@task.created_at, format: :long) %></span></p>
          <p>Last updated at: <span class="font-medium"><%= l(@task.updated_at, format: :long) %></span></p>

          <% if @task.done %>
            <p>Marked as done at: <span class="font-medium"><%= l(@task.done_at, format: :long) %></span></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

