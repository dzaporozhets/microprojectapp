<%= display_flash %>

<div class="space-y-6">
  <div class="task-header m-4">
    <div class="flex items-center justify-between w-full">
      <div class="flex items-center">
        <%= form_with(model: @task, url: project_task_path(@task.project, @task), local: false, data: { turbo: false }) do |form| %>
          <%= form.label :done, class: 'flex items-center' do %>
            <%= form.check_box :done,
              checked: @task.done,
              id: "task_#{@task.id}",
              class: "w-5 h-5 checkbox-round mr-2",
              data: { turbo_action: "advance" },
              onchange: "this.form.requestSubmit()" %>
            <span class="text-sm text-gray-600 dark:text-gray-400">
              <%= @task.done ? 'Completed' : 'Mark as completed' %>
            </span>
          <% end %>
        <% end %>
      </div>

      <div class="flex items-center space-x-2">
        <%= link_to toggle_star_project_task_path(@task.project, @task), method: :patch, data: { turbo: true, turbo_method: :patch }, class: 'btn-sm', title: 'Star' do %>
          <%= render 'project/tasks/star', task: @task, text: true %>
        <% end %>

        <%= link_to edit_project_task_path(@task.project, @task), data: { turbo: true }, class: 'btn-sm', title: 'Edit' do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
          </svg>
        <% end %>

        <%= link_to collapse_task_path(@task.project), class: 'btn-sm', data: { turbo: true }, title: 'Back to tasks list' do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
          </svg>
        <% end %>
      </div>
    </div>
  </div>

  <div class="task-details space-y-4 m-4">
    <h1 class="font-semibold text-lg">
      <%= @task.name %>
    </h1>

    <% if @task.description.present? %>
      <div class="prose max-w-none break-words">
        <%= simple_format @task.description %>
      </div>
    <% end %>

    <%= render 'project/tasks/metadata', task: @task %>
  </div>

  <div class="task-comments">
    <%= render 'project/tasks/comments' %>
  </div>
</div>
