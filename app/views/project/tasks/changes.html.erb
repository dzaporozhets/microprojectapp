<div class="lg:w-2/3 mx-auto space-y-6">
  <div class="resource-container">
    <div class="resource-header">
      <div class="flex items-center justify-between w-full">
        <div>
          <h1 class="resource-title"><%= @task.name %></h1>
          <p class="resource-description">Showing the last 5 changes to this task</p>
        </div>
      </div>
    </div>

    <div class="divide-y divide-gray-200 dark:divide-gray-700 space-y-0">
      <% if @versions.any? %>
        <% @versions.reverse.each_with_index do |version, index| %>
          <div class="p-4">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <div class="flex items-center space-x-4 mb-3">
                  <div class="text-sm text-gray-600 dark:text-gray-400">
                    <%= l(version.created_at, format: :long) %>
                  </div>
                  <div class="text-sm text-gray-600 dark:text-gray-400">
                    by <%= @users_by_version[version.id]&.email || "Unknown" %>
                  </div>
                </div>
                
                <% if version.changeset.present? %>
                  <div class="space-y-2">
                    <% version.changeset.each do |field, (old_value, new_value)| %>
                      <div class="text-sm">
                        <span class="font-medium text-gray-900 dark:text-gray-200"><%= field.humanize %>:</span>
                        Changed from "<span class="text-red-500"><%= old_value.presence || 'nil' %></span>"
                        to "<span class="text-green-500"><%= new_value.presence || 'nil' %></span>"
                      </div>
                    <% end %>
                  </div>
                <% else %>
                  <div class="text-sm text-gray-500 dark:text-gray-400">
                    No changes recorded.
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="p-4">
          <div class="resource-empty-state">
            <div class="flex items-center justify-center h-12 w-12 rounded-md bg-gray-100 dark:bg-gray-800 mx-auto">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-600 dark:text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
            </div>
            <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-gray-200">No versions available</h3>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">No version history found for this task.</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
