<div class="">
  <div class="resource-container">
    <!-- Header with actions -->
    <div class="resource-header">
      <div>
        <h3 class="resource-title">Project Activity</h3>
        <p class="resource-description">Track all actions and changes made to this project.</p>
      </div>
    </div>

    <!-- Activity list -->
    <div class="bg-white dark:bg-gray-800">
      <% if @records.any? %>
        <div class="px-4 py-4 sm:px-6">
          <ol class="relative border-l border-gray-200 dark:border-gray-700 space-y-6">
            <% @records.each do |record| %>
              <%= render 'project/activity/record', record: record %>
            <% end %>
          </ol>
        </div>
      <% else %>
        <div class="resource-empty-state">
          <svg xmlns="http://www.w3.org/2000/svg" class="resource-empty-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <h3 class="resource-empty-title">No activity yet</h3>
          <p class="resource-empty-description">Activity will appear here as you and your team work on this project.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
