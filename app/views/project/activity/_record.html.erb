<li class="ml-4 sm:ml-6">
  <div class="absolute w-3 h-3 bg-violet-500 rounded-full mt-1.5 -left-1.5 border border-white dark:border-gray-900 dark:bg-violet-400"></div>
  <div class="rounded-lg">
    <div class="flex justify-between items-start">
      <div>
        <span class="font-medium text-gray-900 dark:text-gray-200 text-sm"><%= record.user.email %></span>
        <p class="mt-0.5 text-sm text-gray-500 dark:text-gray-400">
          <%= record_to_text(record) %>
        </p>
      </div>
      <time datetime="<%= record.created_at.iso8601 %>" class="flex-none py-0.5 text-xs leading-5 text-gray-500 dark:text-gray-400">
        <%= time_ago_short record.created_at %>
      </time>
    </div>
  </div>
</li>
