<div class="bg-white dark:bg-gray-900 shadow-sm rounded-lg overflow-hidden">
  <!-- Header with actions -->
  <div class="px-4 py-5 sm:px-6 flex justify-between items-center border-b border-gray-200 dark:border-gray-800">
    <div>
      <h3 class="text-lg font-medium leading-6 text-gray-900 dark:text-gray-100">Project Links</h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-500 dark:text-gray-400">Save and manage useful URLs to quickly access external resources or references.</p>
    </div>
    <div>
      <%= link_to new_project_link_path(@project), class: "inline-flex items-center btn-primary" do %>
        Add Link
      <% end %>
    </div>
  </div>

  <!-- Links list -->
  <div class="bg-white dark:bg-gray-900">
    <% if @project.links.any? %>
      <ul role="list" class="divide-y divide-gray-200 dark:divide-gray-800">
        <% @project.links.each do |link| %>
          <%= render 'project/links/link', link: link %>
        <% end %>
      </ul>
    <% else %>
      <div class="text-center py-12">
        <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M13.19 8.688a4.5 4.5 0 011.242 7.244l-4.5 4.5a4.5 4.5 0 01-6.364-6.364l1.757-1.757m13.35-.622l1.757-1.757a4.5 4.5 0 00-6.364-6.364l-4.5 4.5a4.5 4.5 0 001.242 7.244" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-gray-200">No links</h3>
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Get started by adding your first project link.</p>
        <div class="mt-6">
          <%= link_to new_project_link_path(@project), class: "inline-flex items-center btn-primary" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Add a link
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
