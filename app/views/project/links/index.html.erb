<div class="w-full">
  <% content_for :title, "Links" %>

  <div class="flex justify-between items-center mb-4 pb-4 border-b">
    <h1 class="font-bold text-2xl dark:text-gray-200">Links</h1>
    <%= link_to "New link", new_project_link_path(@project), class: "rounded-md py-2 px-4 bg-indigo-700 text-white block text-sm" %>
  </div>

  <div id="links" class="min-w-full">
    <% @links.each do |link| %>
      <li id="<%= dom_id link %>" class="flex items-center justify-between py-2 text-sm leading-6">
        <div class="flex min-w-0 gap-x-4">
          <div class="flex shrink-0 items-center gap-x-4">
            <svg class="h-6 w-6 fill-gray-900 dark:fill-gray-100">
              <path d="M5 4a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v14l-5-2.5L5 18V4Z"></path>
            </svg>
          </div>
          <div class="min-w-0 flex-auto">
            <p class="text-sm font-semibold leading-6 text-gray-900 dark:text-gray-200"><%= link_to link.safe_title, link.url, target: :_blank %></p>
            <p class="text-sm text-gray-500"><%= link_to link.url, link.url, target: :_blank %></p>
          </div>
        </div>
        <div class="flex shrink-0 items-center gap-x-4">
          <%= button_to project_link_path(link.project, link), method: :delete, data: { "turbo-method": :delete }, alt: 'delete', title: 'Delete', class: 'delete-project-link' do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3 h-3 text-gray-400 dark:text-gray-600 dark:hover:text-indigo-700">
              <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
            </svg>
          <% end %>
        </div>
      </li>
    <% end %>
  </div>
</div>
