<%= form_with(model: [@project, link], class: "contents") do |form| %>
  <%= render "shared/errors", resource: link %>

  <div class="mt-5">
    <%= form.label :url, "Put your URL here", class: 'text-gray-600 font-semibold' %>
    <%= form.text_field :url, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full text-sm", required: true %>
  </div>

  <div class="mt-5">
    <%= form.label :title, 'Give it a name or leave blank', class: 'text-gray-600 text-sm' %>
    <%= form.text_field :title, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full text-sm" %>
  </div>

  <div class="mt-5">
    <%= form.submit class: "btn-primary" %>
  </div>
<% end %>
