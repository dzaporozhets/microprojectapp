<li class="flex items-center justify-between px-4 py-2 text-sm leading-6">
  <div class="flex w-0 flex-1 items-center">
    <svg class="h-5 w-5 flex-shrink-0 text-gray-400 dark:text-gray-600" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
      <path fill-rule="evenodd" d="M15.621 4.379a3 3 0 00-4.242 0l-7 7a3 3 0 004.241 4.243h.001l.497-.5a.75.75 0 011.064 1.057l-.498.501-.002.002a4.5 4.5 0 01-6.364-6.364l7-7a4.5 4.5 0 016.368 6.36l-3.455 3.553A2.625 2.625 0 119.52 9.52l3.45-3.451a.75.75 0 111.061 1.06l-3.45 3.451a1.125 1.125 0 001.587 1.595l3.454-3.553a3 3 0 000-4.242z" clip-rule="evenodd" />
    </svg>
    <div class="ml-4 flex min-w-0 flex-1 gap-2">
      <%= link_to download_project_files_path(@project, file: project_file.identifier), data: { turbo: false }, class: "truncate text-sm dark:text-gray-400 hover:text-indigo-700 dark:hover:text-indigo-300" do %>
        <%= project_file.file.filename %>
      <% end %>
    </div>
  </div>
  <div class="ml-4 flex-shrink-0">
    <span class="flex-shrink-0 text-gray-400 dark:text-gray-600"><%= number_to_human_size project_file.file.size %></span>
  </div>
  <div class="ml-4 flex-shrink-0">
    <%= button_to delete_project_files_path(@project, file: project_file.identifier), method: :delete, data: { turbo_confirm: 'Delete the file? Are you sure?' }, alt: 'Delete file' do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3 h-3 text-gray-400 dark:text-gray-600 dark:hover:text-indigo-300">
        <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
      </svg>
    <% end %>
  </div>
</li>
