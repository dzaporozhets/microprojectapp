<div class="w-full">
  <% content_for :title, "Files" %>

  <div class="flex justify-between items-center mb-4 pb-4 border-b">
    <h1 class="font-bold text-2xl">Files</h1>
    <%= link_to "New file", new_project_file_path(@project), class: "rounded-md py-2 px-4 bg-indigo-700 text-white block text-sm" %>
  </div>

  <div id="files" class="min-w-full">
    <% @files.each do |file| %>
      <%= render 'project/files/file', project_file: file %>
    <% end %>
  </div>
</div>

