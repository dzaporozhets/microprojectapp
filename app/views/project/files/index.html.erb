<div class="resource-container">
  <!-- Header with actions -->
  <div class="resource-header">
    <div>
      <h3 class="resource-title">Project Files</h3>
      <p class="resource-description">Upload and organize project-related files to keep all your resources in one place.</p>
    </div>
    <div>
      <%= link_to new_project_file_path(@project), class: "inline-flex items-center btn-primary" do %>
        Add File
      <% end %>
    </div>
  </div>

  <!-- File list -->
  <div class="bg-white dark:bg-gray-800">
    <% if @project.project_files.any? %>
      <ul role="list" class="resource-list">
        <% @project.project_files.each do |project_file| %>
          <%= render 'project/files/file', project_file: project_file %>
        <% end %>
      </ul>
    <% else %>
      <div class="resource-empty-state">
        <svg class="resource-empty-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m6.75 12H9m1.5-12H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
        </svg>
        <h3 class="resource-empty-title">No files</h3>
        <p class="resource-empty-description">Get started by uploading your first project file.</p>
        <div class="resource-empty-action">
          <%= link_to new_project_file_path(@project), class: "inline-flex items-center btn-primary" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="resource-action-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Upload a file
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
