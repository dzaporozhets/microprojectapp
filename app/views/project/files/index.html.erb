<div class="bg-white dark:bg-gray-900 shadow-sm rounded-lg overflow-hidden">
  <!-- Header with actions -->
  <div class="px-4 py-5 sm:px-6 flex justify-between items-center border-b border-gray-200 dark:border-gray-800">
    <div>
      <h3 class="text-lg font-medium leading-6 text-gray-900 dark:text-gray-100">Project Files</h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-500 dark:text-gray-400">Upload and organize project-related files to keep all your resources in one place.</p>
    </div>
    <div>
      <%= link_to new_project_file_path(@project), class: "inline-flex items-center btn-primary" do %>
        Add File
      <% end %>
    </div>
  </div>

  <!-- File list -->
  <div class="bg-white dark:bg-gray-900">
    <% if @project.project_files.any? %>
      <ul role="list" class="divide-y divide-gray-200 dark:divide-gray-800">
        <% @project.project_files.each do |project_file| %>
          <%= render 'project/files/file', project_file: project_file %>
        <% end %>
      </ul>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m6.75 12H9m1.5-12H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-gray-200">No files</h3>
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Get started by uploading your first project file.</p>
        <div class="mt-6">
          <%= link_to new_project_file_path(@project), class: "inline-flex items-center btn-primary" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Upload a file
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
