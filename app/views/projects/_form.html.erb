<%= form_with(model: project, class: "contents") do |form| %>
  <%= render "shared/errors", resource: project %>

  <div class="mt-5">
    <%= form.label :name, class:"dark:text-gray-100" %>
    <%= form.text_field :name, required: true, class: "block base-input w-full mt-2" %>
  </div>

  <div class="mt-5">
    <%= form.submit class: "btn-primary" %>
  </div>
<% end %>
