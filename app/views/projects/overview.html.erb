<div class="lg:w-2/3 mx-auto space-y-6">
  <!-- Notes Section -->
  <div class="resource-container">
    <div class="resource-header">
      <div class="flex items-center justify-between w-full">
        <div class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-500 dark:text-gray-400 mr-2">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m2.25 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
          </svg>
          <h2 class="resource-title">Notes</h2>
        </div>
        <%= link_to new_project_note_path(@project), class: theme_button_primary do %>
          Add Note
        <% end %>
      </div>
    </div>

    <% if @project.notes.any? %>
      <div class="resource-list">
        <% @project.notes.each do |note| %>
          <%= render 'project/notes/note', note: note %>
        <% end %>
      </div>
    <% else %>
      <div class="resource-empty-state">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="resource-empty-icon">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m2.25 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
        </svg>
        <h3 class="resource-empty-title">No notes</h3>
        <p class="resource-empty-description">Create your first project note to get started.</p>
        <div class="resource-empty-action">
          <%= link_to new_project_note_path(@project), class: theme_button_primary do %>
            Add a note
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Files Section -->
  <div class="resource-container">
    <div class="resource-header">
      <div class="flex items-center justify-between w-full">
        <div class="flex items-center">
          <svg class="w-5 h-5 text-gray-500 dark:text-gray-400 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m6.75 12H9m1.5-12H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
          </svg>
          <h2 class="resource-title">Files</h2>
        </div>
        <%= link_to new_project_file_path(@project), class: theme_button_primary do %>
          Upload File
        <% end %>
      </div>
    </div>

    <% if @project.project_files.any? %>
      <div class="resource-list">
        <% @project.project_files.each do |project_file| %>
          <%= render 'project/files/file', project_file: project_file %>
        <% end %>
      </div>
    <% else %>
      <div class="resource-empty-state">
        <svg class="resource-empty-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m6.75 12H9m1.5-12H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
        </svg>
        <h3 class="resource-empty-title">No files</h3>
        <p class="resource-empty-description">Upload your first project file to get started.</p>
        <div class="resource-empty-action">
          <%= link_to new_project_file_path(@project), class: theme_button_primary do %>
            Upload a file
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Links Section -->
  <div class="resource-container">
    <div class="resource-header">
      <div class="flex items-center justify-between w-full">
        <div class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-5 h-5 text-gray-500 dark:text-gray-400 mr-2">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M13.19 8.688a4.5 4.5 0 011.242 7.244l-4.5 4.5a4.5 4.5 0 01-6.364-6.364l1.757-1.757m13.35-.622l1.757-1.757a4.5 4.5 0 00-6.364-6.364l-4.5 4.5a4.5 4.5 0 001.242 7.244" />
          </svg>
          <h2 class="resource-title">Links</h2>
        </div>
        <%= link_to new_project_link_path(@project), class: theme_button_primary do %>
          Add Link
        <% end %>
      </div>
    </div>

    <% if @project.links.any? %>
      <div class="resource-list">
        <% @project.links.each do |link| %>
          <%= render 'project/links/link', link: link %>
        <% end %>
      </div>
    <% else %>
      <div class="resource-empty-state">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="resource-empty-icon">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M13.19 8.688a4.5 4.5 0 011.242 7.244l-4.5 4.5a4.5 4.5 0 01-6.364-6.364l1.757-1.757m13.35-.622l1.757-1.757a4.5 4.5 0 00-6.364-6.364l-4.5 4.5a4.5 4.5 0 001.242 7.244" />
        </svg>
        <h3 class="resource-empty-title">No links</h3>
        <p class="resource-empty-description">Add your first project link to get started.</p>
        <div class="resource-empty-action">
          <%= link_to new_project_link_path(@project), class: theme_button_primary do %>
            Add a link
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
