<div class="mb-4">
  <p class="text-sm font-medium leading-6 text-gray-900 mt-4">Team</p>
  <ul role="list" class="divide-y divide-gray-100">
    <li class="flex justify-between py-3 px-4">
      <div class="flex min-w-0 gap-x-4">
        <%= avatar_tag(@project.user, "h-6 w-6 flex-none rounded-full bg-gray-200") %>
        <div class="min-w-0 flex-auto">
          <p class="text-sm leading-6 text-gray-600"><%= @project.user.email %></p>
        </div>
      </div>
    </li>

    <% @project.users.each do |user| %>
      <li id="project_<%= dom_id user %>" class="flex justify-between py-3 px-4">
        <div class="flex min-w-0 gap-x-4">
          <%= avatar_tag(user, "h-6 w-6 flex-none rounded-full bg-gray-200") %>
          <div class="min-w-0 flex-auto">
            <p class="text-sm leading-6 text-gray-600"><%= user.email %></p>
          </div>
        </div>

        <div class="ml-4 flex-shrink-0">
          <%= button_to project_user_path(@project, user), method: :delete, title: "Remove", data: { turbo_confirm: 'Remove team member? Are you sure?' } do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3 h-3 text-gray-400 mt-1">
              <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
            </svg>
          <% end %>
        </div>
      </li>
    <% end %>

    <li class="flex justify-between py-3 px-4">
      <div class="flex min-w-0 gap-x-4">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-6 w-6 flex-shrink-0 fill-gray-200 text-gray-400">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
        </svg>
        <div class="min-w-0 flex-auto">
          <%= link_to "Invite people", invite_project_users_path(@project), class: "text-sm leading-6 text-gray-600 hover:text-indigo-700" %>
        </div>
      </div>
    </li>
  </ul>
</div>
