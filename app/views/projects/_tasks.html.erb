<%= render 'project/tasks/form', project: @project %>
<%= render 'project/tasks/tasks', tasks_todo: @tasks_todo, tasks_done: @tasks_done %>

<% if @project.tasks.done.count > 50 %>
  <div class="mt-10 text-center">
    <%= link_to project_tasks_path(@project, status: 'done'), class: "block py-2 px-3 text-sm leading-6 text-violet-600 hover:text-violet-500" do %>
      <p>Show all completed tasks</p>
    <% end %>
  </div>
<% end %>

