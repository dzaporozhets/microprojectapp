<div>
  <% content_for :title, "Projects" %>

  <% content_for :subnav do %>
    <div class="subnav-css">
      <div class="flex flex-wrap justify-between items-center max-w-screen-md mx-auto px-4">
        <%= home_tabs "Projects" %>
      <%= link_to "New Project", new_project_path, class: "btn-base" %>
      </div>
    </div>
  <% end %>

  <%= display_flash %>

  <div>
    <div class="space-y-6">
      <% if @pinned_projects.present? %>
        <div class="flex items-center justify-center text-sm">
          <span class="flex-grow border-t border-gray-300 dark:border-gray-900"></span>
          <span class="px-4 text-center text-gray-500 dark:text-gray-600">Favorite Projects</span>
          <span class="flex-grow border-t border-gray-300 dark:border-gray-900"></span>
        </div>
        <ul id="pinned-projects" role="list" class="projects-list">
          <% @pinned_projects.each do |project| %>
            <%= render project %>
          <% end %>
        </ul>
      <% end %>

      <% if @projects.present? %>
        <div class="flex items-center justify-center text-sm">
          <span class="flex-grow border-t border-gray-300 dark:border-gray-900"></span>
          <span class="px-4 text-center text-gray-500 dark:text-gray-600">All Projects</span>
          <span class="flex-grow border-t border-gray-300 dark:border-gray-900"></span>
        </div>
        <ul id="projects" role="list" class="projects-list">
          <% @projects.each do |project| %>
            <%= render project %>
          <% end %>
        </ul>
      <% end %>

      <% if @archived_projects.any? %>
        <div class="flex items-center justify-center text-sm">
          <span class="flex-grow border-t border-gray-300 dark:border-gray-900"></span>
          <span class="px-4 text-center text-gray-500 dark:text-gray-600">Archived Projects</span>
          <span class="flex-grow border-t border-gray-300 dark:border-gray-900"></span>
        </div>
        <ul id="archived-projects" role="list" class="projects-list">
          <% @archived_projects.each do |project| %>
            <%= render project %>
          <% end %>
        </ul>

        <% if @archived_projects.total_pages > 1 %>
          <div class="mt-4">
            <%= paginate @archived_projects %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
