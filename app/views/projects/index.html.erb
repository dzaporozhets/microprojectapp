<!--<div class="mx-auto md:w-2/3 w-full">-->
<div class="w-full">
  <% content_for :title, "Projects" %>

  <div class="flex justify-between items-center mb-3 mt-3">
    <h1 class="font-bold text-2xl">Projects</h1>
    <%= link_to "New Project", new_project_path, class: "rounded-md py-2 px-4 bg-indigo-700 text-white block text-sm" %>
  </div>

  <div id="projects" class="min-w-full grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-6">
    <% @projects.each do |project| %>
      <%= render project %>
    <% end %>

    <% if @archived_projects.any? %>
      <div class="flex items-center justify-between gap-x-6 py-3 md:py-5 md:col-span-3">
        <span class="flex-grow border-t border-gray-100"></span>
        <span class="px-4 text-center text-gray-400">Archived</span>
        <span class="flex-grow border-t border-gray-100"></span>
      </div>

      <% @archived_projects.each do |project| %>
        <%= render project %>
      <% end %>
    <% end %>
  </div>
</div>
