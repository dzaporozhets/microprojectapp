<li id="<%= dom_id project %>">
  <div class="min-w-0 flex-1">
    <%= link_to project, class: "block" do %>
      <div class="flex items-center justify-between gap-4">
        <div class="min-w-0">
          <h3 class="list-text-primary font-semibold <%= project.archived ? 'text-muted' : '' %> truncate">
            <%= project.name.truncate(100) %>
            <% if local_assigns[:pinned] %>
              <svg class="inline h-4 w-4 ml-1 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434 2.082-5.005Z" clip-rule="evenodd" />
              </svg>
            <% end %>
            <% if project.overdue_tasks? %>
              <span class="status-dot-overdue ml-2 align-middle" title="Overdue tasks" aria-label="Overdue tasks"></span>
            <% end %>
            <% if project.archived? %>
              <svg class="inline h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="m20.25 7.5-.625 10.632a2.25 2.25 0 0 1-2.247 2.118H6.622a2.25 2.25 0 0 1-2.247-2.118L3.75 7.5M10 11.25h4M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125Z" />
              </svg>
            <% end %>
          </h3>

          <div class="mt-1 list-text-secondary truncate">
            Created by <%= project.user.email %>
          </div>
        </div>

        <% if !project.archived && project.tasks.todo.any? %>
          <div class="flex-shrink-0 text-right leading-tight flex flex-col items-end justify-center">
            <strong class="list-text-primary"><%= project.tasks.todo.count %></strong>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</li>
