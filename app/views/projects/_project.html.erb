<div id="<%= dom_id project %>" class="flex items-center justify-between gap-x-6 py-2 md:py-4">
  <div class="min-w-0">
    <%= link_to project do %>
      <div class="flex items-start gap-x-3">
        <div class="leading-6 text-base <%= project.archived ? 'font-medium text-gray-600 dark:text-gray-400' : 'font-semibold text-gray-900 dark:text-gray-200' %>">
          <span><%= project.name %></span>

          <% if project.archived? %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5 text-gray-400 dark:text-gray-600 inline ml-2">
              <path stroke-linecap="round" stroke-linejoin="round" d="m20.25 7.5-.625 10.632a2.25 2.25 0 0 1-2.247 2.118H6.622a2.25 2.25 0 0 1-2.247-2.118L3.75 7.5M10 11.25h4M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125Z" />
            </svg>
            <%#<span class="text-sm font-normal text-gray-500 border rounded px-2 py-1 ml-2">archived</span>%>
          <% end %>
        </div>
      </div>
      <div class="mt-1 flex items-center gap-x-2 text-xs leading-5 text-gray-500">
        Created by <%= project.user.email %>
      </div>
    <% end %>
  </div>
</div>
