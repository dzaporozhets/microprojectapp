<nav class="space-y-1" aria-label="Sidebar">
  <%= link_to project_files_path(@project), class: project_nav_class(current_page?(project_files_path(@project))) do %>
    <div class="flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="flex-shrink-0 mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
      </svg>

      <span class="truncate">Files</span>
    </div>
    <% files_count = @project.project_files.count %>
    <% if files_count > 0 %>
      <span class="ml-auto inline-block py-0.5 px-2 text-xs rounded-full bg-gray-100 text-gray-600 dark:bg-gray-800 dark:text-gray-300">
        <%= files_count %>
      </span>
    <% end %>
  <% end %>

  <%= link_to project_links_path(@project), class: project_nav_class(current_page?(project_links_path(@project))) do %>
    <div class="flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="flex-shrink-0 mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M13.19 8.688a4.5 4.5 0 0 1 1.242 7.244l-4.5 4.5a4.5 4.5 0 0 1-6.364-6.364l1.757-1.757m13.35-.622 1.757-1.757a4.5 4.5 0 0 0-6.364-6.364l-4.5 4.5a4.5 4.5 0 0 0 1.242 7.244" />
      </svg>

      <span class="truncate">Links</span>
    </div>
    <% links_count = @project.links.count %>
    <% if links_count > 0 %>
      <span class="ml-auto inline-block py-0.5 px-2 text-xs rounded-full bg-gray-100 text-gray-600 dark:bg-gray-800 dark:text-gray-300">
        <%= links_count %>
      </span>
    <% end %>
  <% end %>

  <% unless @project.personal? %>
    <%= link_to project_users_path(@project), class: project_nav_class(current_page?(project_users_path(@project))) do %>
      <div class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="flex-shrink-0 mr-3 size-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 0 0 2.625.372 9.337 9.337 0 0 0 4.121-.952 4.125 4.125 0 0 0-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 0 1 8.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0 1 11.964-3.07M12 6.375a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0Zm8.25 2.25a2.625 2.625 0 1 1-5.25 0 2.625 2.625 0 0 1 5.25 0Z" />
        </svg>

        <span class="truncate">Team</span>
      </div>
      <% team_count = @project.team.count %>
      <% if team_count > 0 %>
        <span class="ml-auto inline-block py-0.5 px-2 text-xs rounded-full bg-gray-100 text-gray-600 dark:bg-gray-800 dark:text-gray-300">
          <%= team_count %>
        </span>
      <% end %>
    <% end %>

    <%= link_to project_activity_path(@project), class: project_nav_class(current_page?(project_activity_path(@project))) do %>
      <div class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5 flex-shrink-0 mr-3">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12.75 19.5v-.75a7.5 7.5 0 0 0-7.5-7.5H4.5m0-6.75h.75c7.87 0 14.25 6.38 14.25 14.25v.75M6 18.75a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Z" />
        </svg>

        <span class="truncate">Activity</span>
      </div>
    <% end %>
  <% end %>

  <% if @project.user == current_user %>
    <%= link_to edit_project_path(@project), class: project_nav_class(current_page?(edit_project_path(@project))) do %>
      <div class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5 mr-3 flex-shrink-0">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12a7.5 7.5 0 0 0 15 0m-15 0a7.5 7.5 0 1 1 15 0m-15 0H3m16.5 0H21m-1.5 0H12m-8.457 3.077 1.41-.513m14.095-5.13 1.41-.513M5.106 17.785l1.15-.964m11.49-9.642 1.149-.964M7.501 19.795l.75-1.3m7.5-12.99.75-1.3m-6.063 16.658.26-1.477m2.605-14.772.26-1.477m0 17.726-.26-1.477M10.698 4.614l-.26-1.477M16.5 19.794l-.75-1.299M7.5 4.205 12 12m6.894 5.785-1.149-.964M6.256 7.178l-1.15-.964m15.352 8.864-1.41-.513M4.954 9.435l-1.41-.514M12.002 12l-3.75 6.495" />
        </svg>

        <span class="truncate">Settings</span>
      </div>
    <% end %>
  <% end %>
</nav>
