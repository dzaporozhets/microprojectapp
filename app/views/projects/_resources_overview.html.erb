<div class="resource-container">
  <div class="resource-body">
    <div class="text-center">
      <h2 class="text-balance text-xl font-semibold tracking-tight text-gray-900 sm:text-2xl dark:text-white">Project overview</h2>
      <p class="mt-2 text-xs/5 text-gray-600 dark:text-gray-300">Everything you need at a glance.</p>
    </div>
    <dl class="mt-4 grid grid-cols-1 gap-0.5 overflow-hidden rounded-xl text-center sm:grid-cols-2 lg:grid-cols-4">
      <%= link_to project_tasks_path(project), class: "flex flex-col bg-gray-400/5 p-6 dark:bg-white/5" do %>
        <dt class="text-xs/5 font-semibold text-gray-600 dark:text-gray-300">Tasks</dt>
        <dd class="order-first text-2xl font-semibold tracking-tight text-gray-900 dark:text-white"><%= project.tasks.todo.count %></dd>
      <% end %>
      <%= link_to project_notes_path(project), class: "flex flex-col bg-gray-400/5 p-6 dark:bg-white/5" do %>
        <dt class="text-xs/5 font-semibold text-gray-600 dark:text-gray-300">Notes</dt>
        <dd class="order-first text-2xl font-semibold tracking-tight text-gray-900 dark:text-white"><%= project.notes.count %></dd>
      <% end %>
      <%= link_to project_links_path(project), class: "flex flex-col bg-gray-400/5 p-6 dark:bg-white/5" do %>
        <dt class="text-xs/5 font-semibold text-gray-600 dark:text-gray-300">Links</dt>
        <dd class="order-first text-2xl font-semibold tracking-tight text-gray-900 dark:text-white"><%= project.links.count %></dd>
      <% end %>
      <%= link_to project_files_path(project), class: "flex flex-col bg-gray-400/5 p-6 dark:bg-white/5" do %>
        <dt class="text-xs/5 font-semibold text-gray-600 dark:text-gray-300">Files</dt>
        <dd class="order-first text-2xl font-semibold tracking-tight text-gray-900 dark:text-white"><%= project.project_files.count %></dd>
      <% end %>
    </dl>
  </div>
</div>
