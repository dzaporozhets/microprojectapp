<div class="my-5">
  <table class="min-w-full bg-white border text-sm">
    <thead>
      <tr>
        <th class="px-4 py-2 border">ID</th>
        <th class="px-4 py-2 border">Email</th>
        <th class="px-4 py-2 border">Created At</th>
        <th class="px-4 py-2 border">Updated at</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr class="odd:bg-gray-100 even:bg-white">
          <td class="px-4 py-2 border"><%= link_to user.id, admin_user_path(user), class: 'cursor-pointer underline' %></td>
          <td class="px-4 py-2 border">
            <%= user.email %>
            <% if @confirmable && user.confirmed_at %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 inline-block ml-1">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12c0 1.268-.63 2.39-1.593 3.068a3.745 3.745 0 0 1-1.043 3.296 3.745 3.745 0 0 1-3.296 1.043A3.745 3.745 0 0 1 12 21c-1.268 0-2.39-.63-3.068-1.593a3.746 3.746 0 0 1-3.296-1.043 3.745 3.745 0 0 1-1.043-3.296A3.745 3.745 0 0 1 3 12c0-1.268.63-2.39 1.593-3.068a3.745 3.745 0 0 1 1.043-3.296 3.746 3.746 0 0 1 3.296-1.043A3.746 3.746 0 0 1 12 3c1.268 0 2.39.63 3.068 1.593a3.746 3.746 0 0 1 3.296 1.043 3.746 3.746 0 0 1 1.043 3.296A3.745 3.745 0 0 1 21 12Z" />
              </svg>
            <% end %>
          </td>
          <td class="px-4 py-2 border"><%= user.created_at.to_formatted_s(:short) %></td>
          <td class="px-4 py-2 border"><%= user.updated_at.to_formatted_s(:short) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="mt-4">
  <%= paginate @users %>
</div>
