<% content_for :subnav do %>
  <div class="<%= subnav_css %>">
    <div class="flex flex-wrap justify-between items-center mx-auto max-w-screen-md px-4">
      <%= admin_tabs 'Activity' %>
    </div>
  </div>
<% end %>

<div class="">
  <div class="resource-container">
    <div class="resource-header">
      <div>
        <h1 class="resource-title">Activity Log</h1>
        <p class="resource-description">Recent user activity and system events across the application.</p>
      </div>
    </div>

    <div class="p-4">
      <% if @records.any? %>
        <ul role="list" class="space-y-6">
          <% @records.each do |record| %>
            <li class="relative flex gap-x-4">
              <div class="absolute -bottom-6 left-0 top-0 flex w-6 justify-center">
                <div class="w-px bg-gray-200 dark:bg-gray-800"></div>
              </div>

              <div class="relative flex h-6 w-6 flex-none items-center justify-center bg-transparent">
                <div class="h-1.5 w-1.5 rounded-full bg-gray-100 dark:bg-gray-900 ring-1 ring-gray-300 dark:ring-gray-700"></div>
              </div>

              <div class="flex-auto py-0.5">
                <p class="text-sm leading-5 text-gray-500">
                  <span class="font-medium text-gray-900 dark:text-gray-200"><%= record.user.email %></span>
                  <span class=""><%= record_to_text(record) %></span>
                </p>
              </div>

              <time datetime="<%= record.created_at.iso8601 %>" class="flex-none py-0.5 text-sm leading-5 text-gray-500">
                <%= time_ago_short record.created_at %>
              </time>
            </li>
          <% end %>
        </ul>
      <% else %>
        <div class="text-center py-8">
          <p class="text-sm text-gray-500 dark:text-gray-400">No activity recorded yet.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
