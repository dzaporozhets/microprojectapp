<div class="my-5">
  <%= link_to 'Account', edit_registration_path(current_user), class: "btn-tab" %>
  <%= link_to 'Settings', users_settings_path, class: "btn-tab-active" %>
</div>

<%= render "shared/flash" %>

<div class="mt-6 border-t border-gray-100">
  <%= form_for(@user, url: users_settings_path, html: { method: :put }) do |f| %>
    <%= render "shared/errors", resource: @user %>

    <dl class="divide-y divide-gray-100">
      <div class="py-6">
        <%= f.check_box :allow_invites %>
        <%= f.label :allow_invites, "Allow other users to add you to projects", class: 'ml-2 text-sm' %>
      </div>

      <%- if @user.oauth_enabled? %>
        <div class="py-6">
          <%= f.check_box :disable_password %>
          <%= f.label :disable_password, "Disable Password Authentication (only login with Google)", class: 'ml-2 text-sm' %>
        </div>
      <% end %>

        <div class="py-6">
      <fieldset>
        <legend class="text-sm font-semibold leading-6 text-gray-900">Appearance</legend>
        <p class="mt-1 text-sm leading-6 text-gray-600">How do you want app to handle dark mode</p>
        <div class="mt-6 space-y-6 sm:flex sm:items-center sm:space-x-10 sm:space-y-0">
          <div class="flex items-center">
            <input id="email" name="notification-method" type="radio" checked class="h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-600">
            <label for="email" class="ml-3 block text-sm font-medium leading-6 text-gray-900">Light</label>
          </div>
          <div class="flex items-center">
            <input id="sms" name="notification-method" type="radio" class="h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-600">
            <label for="sms" class="ml-3 block text-sm font-medium leading-6 text-gray-900">Dark</label>
          </div>
          <div class="flex items-center">
            <input id="push" name="notification-method" type="radio" class="h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-600">
            <label for="push" class="ml-3 block text-sm font-medium leading-6 text-gray-900">Auto (based on device)</label>
          </div>
        </div>
      </fieldset>
        </div>

      <div class="py-6">
        <div class="mt-2">
          <%= f.submit "Save settings", class: "justify-center btn-primary" %>
        </div>
      </div>
    </dl>
  <% end %>
</div>
