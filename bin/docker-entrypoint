#!/bin/bash -e

# Ensure SECRET_KEY_BASE is set
if [ "$SERVICE_NAME" == "web" ]; then
  /bin/sh /usr/bin/generate_secret_base-entrypoint.sh
fi

# Generate SSL certificates only if nginx is enabled
if [ "$SERVICE_NAME" == "nginx" ]; then
  /bin/sh /usr/bin/generate_certs-entrypoint.sh
fi

# If running the rails server then create or migrate existing database
if [ "${1}" == "./bin/rails" ] && [ "${2}" == "server" ]; then
  ./bin/rails db:create || echo "Database already exists or creation failed - continuing..."
  ./bin/rails db:migrate
fi

exec "${@}"
